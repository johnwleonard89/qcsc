<div class="logo-container">
	<img src="/images/logo.png" alt="Queen City Surface Coatings Logo" class="logo-image" />
	<span class="logo-text">Queen City Surface Coatings</span>
</div>

<style>
	.logo-container {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		width: fit-content;
		margin: 0;
		color: inherit;
		text-decoration: none;
	}
	
	.logo-image {
		height: 40px;
		width: auto;
		max-width: 40px;
		object-fit: contain;
	}
	
	.logo-text {
		font-family: var(--theme-font-family-serif);
		font-size: var(--font-size-md);
		font-weight: 600;
		color: inherit;
		white-space: nowrap;
	}
	
	.logo-container:hover {
		cursor: pointer;
	}
	
	.logo-container:hover .logo-text {
		text-decoration: underline;
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.logo-text {
			font-size: var(--font-size-sm);
		}
		
		.logo-image {
			height: 36px;
			max-width: 36px;
		}
	}
	
	@media (max-width: 480px) {
		.logo-text {
			display: none;
		}
		
		.logo-image {
			height: 32px;
			max-width: 32px;
		}
	}
</style>
