---
const {post} = Astro.props;
const postUrl = `/blog/${post.slug}`;
---

<li class="blog-post__preview">
  <a href={postUrl}>
    {post.data.featured_image && <img src={post.data.featured_image} alt={post.data.title} />}
    <div class="post-content">
      <h3>{post.data.title}</h3>
      <p class="post-description">{post.data.description}</p>
      <div class="post-meta">
        <span class="post-author">By {post.data.author}</span>
        <span class="post-date">{new Date(post.data.publish_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
      </div>
      {post.data.tags && (
        <div class="post-tags">
          {post.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</li>


<style>
.blog-post__preview {
  background: var(--theme-surface-1);
  border-radius: var(--theme-shape-radius);
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.blog-post__preview:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.blog-post__preview img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  display: block;
}

.blog-post__preview a {
  display: block;
  text-decoration: none;
  color: inherit;
  height: 100%;
}

.post-content {
  padding: 1.5rem;
}

.blog-post__preview h3 {
  margin: 0 0 1rem 0;
  font-size: 1.25rem;
  font-weight: 600;
  line-height: 1.3;
  color: var(--theme-text-1);
}

.post-description {
  color: var(--theme-text-2);
  font-size: 0.9rem;
  line-height: 1.5;
  margin-bottom: 1rem;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.85rem;
  color: var(--theme-text-3);
  margin-bottom: 1rem;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.post-author {
  font-weight: 500;
}

.post-date {
  opacity: 0.8;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: rgba(var(--theme-primary-rgb), 0.1);
  color: var(--theme-primary);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.8rem;
  font-weight: 500;
}

@media (max-width: 768px) {
  .post-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }
  
  .post-content {
    padding: 1rem;
  }
  
  .blog-post__preview h3 {
    font-size: 1.1rem;
  }
}
</style> 