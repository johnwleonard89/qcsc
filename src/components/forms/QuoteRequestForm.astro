---
import { Button, FormInput, FormSelect, FormTextarea } from '@components/odyssey-theme';
---

<form class="quote-form" name="quote-request" method="POST" data-netlify="true">
	<input type="hidden" name="form-name" value="quote-request" />
	
	<div class="form-header">
		<h3>Request a Free Quote</h3>
		<p>Get a personalized estimate for your surface coating project</p>
	</div>

	<div class="form-row">
		<FormInput
			type="text"
			label="First Name *"
			id="firstName"
			name="firstName"
			required
		/>
		<FormInput
			type="text"
			label="Last Name *"
			id="lastName"
			name="lastName"
			required
		/>
	</div>

	<FormInput
		type="email"
		label="Email Address *"
		id="email"
		name="email"
		required
	/>

	<FormInput
		type="tel"
		label="Phone Number *"
		id="phone"
		name="phone"
		required
		autocomplete="tel"
		inputmode="tel"
	/>

	<FormInput
		type="text"
		label="City/Location"
		id="location"
		name="location"
		placeholder="e.g., Cincinnati, West Chester"
	/>

	<FormSelect
		label="Service Type *"
		id="serviceType"
		name="serviceType"
		required
	>
		<option value="">Select a service</option>
		<option value="epoxy-flooring">Epoxy Flooring</option>
		<option value="concrete-polishing">Concrete Polishing</option>
		<option value="surface-restoration">Surface Restoration</option>
		<option value="not-sure">Not Sure - Need Consultation</option>
	</FormSelect>

	<FormInput
		type="number"
		label="Approximate Square Footage"
		id="squareFootage"
		name="squareFootage"
		placeholder="e.g., 400"
		inputmode="numeric"
		pattern="[0-9]*"
	/>

	<FormTextarea
		label="Project Details"
		id="projectDetails"
		name="projectDetails"
		placeholder="Tell us about your project: location (garage, basement, commercial space), current floor condition, timeline, specific requirements, etc."
	/>

	<FormSelect
		label="Timeline"
		id="timeline"
		name="timeline"
	>
		<option value="">When do you want to start?</option>
		<option value="asap">As soon as possible</option>
		<option value="1-month">Within 1 month</option>
		<option value="2-3-months">2-3 months</option>
		<option value="planning">Just planning/researching</option>
	</FormSelect>

	<Button type="submit" class="quote-submit-button">
		Get My Free Quote
	</Button>

	<p class="form-note">
		By submitting this form, you agree to be contacted by Queen City Surface Coatings regarding your quote request.
	</p>
</form>

<style>
/* Quote Request Form - Consistent Styling */
.quote-form {
	background: var(--theme-bg);
	padding: 2rem;
	border-radius: var(--theme-shape-radius);
	box-shadow: 0 4px 16px var(--theme-shadow-light);
	max-width: 100%;
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
}

.form-header {
	text-align: center;
	margin-bottom: 1rem;
}

.form-header h3 {
	color: var(--theme-primary);
	margin-bottom: 1rem;
	font-size: clamp(1.5rem, 4vw, 2rem);
	font-weight: 700;
	font-family: var(--theme-font-family-serif);
}

.form-header p {
	color: var(--theme-on-bg);
	opacity: 0.8;
	line-height: 1.6;
	margin: 0;
}

.form-row {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 1rem;
}

.form-note {
	font-size: 0.875rem;
	color: var(--theme-on-bg);
	opacity: 0.7;
	text-align: center;
	line-height: 1.4;
	margin-top: 0.5rem;
}

.quote-submit-button {
	width: 100%;
	margin-top: 1rem;
}

/* Ensure form components match theme */
:global(.quote-form .form-input),
:global(.quote-form .form-select),
:global(.quote-form .form-textarea) {
	min-height: 44px;
	font-size: 16px;
	border-radius: var(--theme-shape-radius);
	padding: 0.75rem 1rem;
	border: 2px solid var(--theme-border-light);
	background: var(--theme-bg);
	color: var(--theme-on-bg);
	transition: var(--theme-transition);
	font-family: var(--theme-font-family-sans);
}

:global(.quote-form .form-input:focus),
:global(.quote-form .form-select:focus),
:global(.quote-form .form-textarea:focus) {
	outline: none;
	border-color: var(--theme-primary);
	box-shadow: 0 0 0 3px color-mix(in srgb, var(--theme-primary) 20%, transparent);
}

:global(.quote-form .form-textarea) {
	min-height: 120px;
	resize: vertical;
}

:global(.quote-form button) {
	width: 100%;
	min-height: 48px;
	background: var(--theme-primary);
	color: var(--theme-on-primary);
	border: none;
	border-radius: var(--theme-button-border-radius);
	font-size: 1rem;
	font-weight: 600;
	font-family: var(--theme-font-family-sans);
	cursor: pointer;
	transition: var(--theme-transition);
	box-shadow: 0 4px 16px var(--theme-shadow-medium);
}

:global(.quote-form button:hover) {
	background: var(--theme-primary-hover);
	transform: translateY(-2px);
	box-shadow: 0 8px 24px var(--theme-shadow-dark);
}

:global(.quote-form label) {
	font-weight: 600;
	color: var(--theme-on-bg);
	margin-bottom: 0.5rem;
	display: block;
	font-size: 0.875rem;
}

/* Mobile Responsive */
@media (max-width: 768px) {
	.form-row {
		grid-template-columns: 1fr;
	}
	
	.quote-form {
		padding: 1.5rem;
	}
	
	.form-header h3 {
		font-size: 1.5rem;
	}
	
	.form-header {
		margin-bottom: 1.5rem;
	}
}
</style>