---
import { Button, FormInput, FormSelect, FormTextarea } from '@components/odyssey-theme';
---

<form class="quote-form" name="quote-request" method="POST" data-netlify="true">
	<input type="hidden" name="form-name" value="quote-request" />
	
	<div class="form-header">
		<h3>Request a Free Quote</h3>
		<p>Get a personalized estimate for your surface coating project</p>
	</div>

	<div class="form-row">
		<FormInput
			type="text"
			label="First Name *"
			id="firstName"
			name="firstName"
			required
		/>
		<FormInput
			type="text"
			label="Last Name *"
			id="lastName"
			name="lastName"
			required
		/>
	</div>

	<FormInput
		type="email"
		label="Email Address *"
		id="email"
		name="email"
		required
	/>

	<FormInput
		type="tel"
		label="Phone Number *"
		id="phone"
		name="phone"
		required
	/>

	<FormInput
		type="text"
		label="City/Location"
		id="location"
		name="location"
		placeholder="e.g., Cincinnati, West Chester"
	/>

	<FormSelect
		label="Service Type *"
		id="serviceType"
		name="serviceType"
		required
	>
		<option value="">Select a service</option>
		<option value="epoxy-flooring">Epoxy Flooring</option>
		<option value="concrete-polishing">Concrete Polishing</option>
		<option value="surface-restoration">Surface Restoration</option>
		<option value="not-sure">Not Sure - Need Consultation</option>
	</FormSelect>

	<FormInput
		type="number"
		label="Approximate Square Footage"
		id="squareFootage"
		name="squareFootage"
		placeholder="e.g., 400"
	/>

	<FormTextarea
		label="Project Details"
		id="projectDetails"
		name="projectDetails"
		placeholder="Tell us about your project: location (garage, basement, commercial space), current floor condition, timeline, specific requirements, etc."
	/>

	<FormSelect
		label="Timeline"
		id="timeline"
		name="timeline"
	>
		<option value="">When do you want to start?</option>
		<option value="asap">As soon as possible</option>
		<option value="1-month">Within 1 month</option>
		<option value="2-3-months">2-3 months</option>
		<option value="planning">Just planning/researching</option>
	</FormSelect>

	<Button type="submit" style="width: 100%; margin-top: 1rem;">
		Get My Free Quote
	</Button>

	<p class="form-note">
		By submitting this form, you agree to be contacted by Queen City Surface Coatings regarding your quote request.
	</p>
</form>

<style>
	.quote-form {
		background: var(--theme-bg);
		padding: 2rem;
		border-radius: var(--theme-shape-radius);
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		height: fit-content;
	}

	.form-header {
		margin-bottom: 1.5rem;
	}

	.form-header h3 {
		margin: 0 0 0.5rem 0;
		color: var(--theme-primary);
		font-size: 1.5rem;
		font-weight: 600;
	}

	.form-header p {
		margin: 0;
		color: var(--theme-on-bg);
		opacity: 0.8;
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.form-note {
		font-size: 0.875rem;
		color: var(--theme-on-bg);
		opacity: 0.7;
		margin: 1rem 0 0 0;
		text-align: center;
	}

	@media (max-width: 768px) {
		.form-row {
			grid-template-columns: 1fr;
		}
		
		.quote-form {
			padding: 1.5rem;
		}
	}
</style>