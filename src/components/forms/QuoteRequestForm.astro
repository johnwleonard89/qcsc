---
import { Button, FormInput, FormSelect, FormTextarea } from '@components/odyssey-theme';
---

<form class="quote-form mobile-optimized-form" name="quote-request" method="POST" data-netlify="true">
	<input type="hidden" name="form-name" value="quote-request" />
	
	<div class="form-header">
		<h3>Request a Free Quote</h3>
		<p>Get a personalized estimate for your surface coating project</p>
	</div>

	<div class="form-row">
		<FormInput
			type="text"
			label="First Name *"
			id="firstName"
			name="firstName"
			required
		/>
		<FormInput
			type="text"
			label="Last Name *"
			id="lastName"
			name="lastName"
			required
		/>
	</div>

	<FormInput
		type="email"
		label="Email Address *"
		id="email"
		name="email"
		required
	/>

	<FormInput
		type="tel"
		label="Phone Number *"
		id="phone"
		name="phone"
		required
		autocomplete="tel"
		inputmode="tel"
	/>

	<FormInput
		type="text"
		label="City/Location"
		id="location"
		name="location"
		placeholder="e.g., Cincinnati, West Chester"
	/>

	<FormSelect
		label="Service Type *"
		id="serviceType"
		name="serviceType"
		required
	>
		<option value="">Select a service</option>
		<option value="epoxy-flooring">Epoxy Flooring</option>
		<option value="concrete-polishing">Concrete Polishing</option>
		<option value="surface-restoration">Surface Restoration</option>
		<option value="not-sure">Not Sure - Need Consultation</option>
	</FormSelect>

	<FormInput
		type="number"
		label="Approximate Square Footage"
		id="squareFootage"
		name="squareFootage"
		placeholder="e.g., 400"
		inputmode="numeric"
		pattern="[0-9]*"
	/>

	<FormTextarea
		label="Project Details"
		id="projectDetails"
		name="projectDetails"
		placeholder="Tell us about your project: location (garage, basement, commercial space), current floor condition, timeline, specific requirements, etc."
	/>

	<FormSelect
		label="Timeline"
		id="timeline"
		name="timeline"
	>
		<option value="">When do you want to start?</option>
		<option value="asap">As soon as possible</option>
		<option value="1-month">Within 1 month</option>
		<option value="2-3-months">2-3 months</option>
		<option value="planning">Just planning/researching</option>
	</FormSelect>

	<Button type="submit" style="width: 100%; margin-top: 1rem;">
		Get My Free Quote
	</Button>

	<p class="form-note">
		By submitting this form, you agree to be contacted by Queen City Surface Coatings regarding your quote request.
	</p>
</form>

<style>
/* Mobile-Optimized Form Styles */
.mobile-optimized-form {
	background: var(--theme-surface-1);
	padding: 2rem;
	border-radius: 0.75rem;
	box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
	max-width: 100%;
}

.form-header {
	text-align: center;
	margin-bottom: 2rem;
}

.form-header h3 {
	color: var(--theme-primary);
	margin-bottom: 0.5rem;
	font-size: 1.5rem;
}

.form-header p {
	color: var(--theme-on-surface-1);
	opacity: 0.8;
}

.form-row {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 1rem;
	margin-bottom: 1.5rem;
}

.form-note {
	font-size: 0.875rem;
	color: var(--theme-on-surface-1);
	opacity: 0.7;
	text-align: center;
	margin-top: 1rem;
	line-height: 1.4;
}

/* Mobile-specific optimizations */
@media (max-width: 768px) {
	.mobile-optimized-form {
		padding: 1.5rem;
		border-radius: 0.5rem;
		margin: 0 -1rem;
	}
	
	.form-row {
		grid-template-columns: 1fr;
		gap: 0;
		margin-bottom: 0;
	}
	
	.form-header h3 {
		font-size: 1.25rem;
	}
	
	.form-header {
		margin-bottom: 1.5rem;
	}
}

/* Ensure form inputs have proper touch targets */
:global(.mobile-optimized-form input),
:global(.mobile-optimized-form select),
:global(.mobile-optimized-form textarea) {
	min-height: 44px;
	font-size: 16px; /* Prevents zoom on iOS */
	border-radius: 0.375rem;
	padding: 0.75rem 1rem;
	border: 2px solid #e5e5e5;
	transition: border-color 0.2s ease, box-shadow 0.2s ease;
	-webkit-appearance: none;
	appearance: none;
}

:global(.mobile-optimized-form input:focus),
:global(.mobile-optimized-form select:focus),
:global(.mobile-optimized-form textarea:focus) {
	outline: none;
	border-color: var(--theme-primary);
	box-shadow: 0 0 0 3px rgba(var(--theme-primary-rgb, 99, 102, 241), 0.1);
}

:global(.mobile-optimized-form textarea) {
	min-height: 120px;
	resize: vertical;
}

:global(.mobile-optimized-form button) {
	min-height: 48px;
	font-size: 1rem;
	font-weight: 600;
	border-radius: 0.5rem;
	transition: all 0.2s ease;
	touch-action: manipulation;
}

/* Accessibility improvements */
:global(.mobile-optimized-form label) {
	font-weight: 600;
	color: var(--theme-on-surface-1);
	margin-bottom: 0.5rem;
	display: block;
}

/* Loading state for form submission */
.mobile-optimized-form[data-loading="true"] {
	position: relative;
	pointer-events: none;
}

.mobile-optimized-form[data-loading="true"]::after {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(255, 255, 255, 0.8);
	border-radius: 0.75rem;
	display: flex;
	align-items: center;
	justify-content: center;
}
</style>

