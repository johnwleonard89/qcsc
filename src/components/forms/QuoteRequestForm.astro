---
import { Button, FormInput, FormSelect, FormTextarea } from '@components/odyssey-theme';
---

<form class="quote-form" action="https://docs.google.com/forms/d/e/YOUR_GOOGLE_FORM_ID/formResponse" method="POST" target="hidden_iframe" onsubmit="submitted=true;">
	<iframe name="hidden_iframe" id="hidden_iframe" style="display:none;" onload="if(submitted) {document.getElementById('form-success').style.display='block'; document.querySelector('.quote-form').style.display='none';}"></iframe>
	
	<div class="form-header">
		<h3>Request a Free Quote</h3>
		<p>Get a personalized estimate for your surface coating project</p>
	</div>

	<div class="form-row">
		<FormInput
			type="text"
			label="First Name *"
			id="firstName"
			name="entry.FIRST_NAME_ENTRY_ID"
			required
		/>
		<FormInput
			type="text"
			label="Last Name *"
			id="lastName"
			name="entry.LAST_NAME_ENTRY_ID"
			required
		/>
	</div>

	<FormInput
		type="email"
		label="Email Address *"
		id="email"
		name="entry.EMAIL_ENTRY_ID"
		required
	/>

	<FormInput
		type="tel"
		label="Phone Number *"
		id="phone"
		name="entry.PHONE_ENTRY_ID"
		required
		autocomplete="tel"
		inputmode="tel"
	/>

	<FormTextarea
		label="Project Details *"
		id="projectDetails"
		name="entry.PROJECT_DETAILS_ENTRY_ID"
		placeholder="Tell us about your project: location (garage, basement, commercial space), current floor condition, timeline, specific requirements, etc."
		required
	/>

	<Button type="submit" class="quote-submit-button">
		Get My Free Quote
	</Button>

	<p class="form-note">
		By submitting this form, you agree to be contacted by Queen City Surface Coatings regarding your quote request.
	</p>
</form>

<div id="form-success" style="display:none;" class="form-success">
	<div class="success-content">
		<h3>Thank You!</h3>
		<p>Your quote request has been submitted successfully. We'll get back to you within 24 hours.</p>
		<div class="success-contact">
			<p>For immediate assistance, call us at <a href="tel:+15132965525">(513) 296-5525</a></p>
		</div>
	</div>
</div>

<style>
/* Quote Request Form - Navy & Yellow Theme */
.quote-form {
	background: #002F4B;
	padding: 2rem;
	border-radius: var(--theme-shape-radius);
	box-shadow: 0 4px 16px var(--theme-shadow-light);
	max-width: 100%;
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
}

.form-header {
	text-align: center;
	margin-bottom: 1rem;
}

.form-header h3 {
	color: #FFC107;
	margin-bottom: 1rem;
	font-size: clamp(1.5rem, 4vw, 2rem);
	font-weight: 700;
	font-family: var(--theme-font-family-serif);
}

.form-header p {
	color: white;
	opacity: 0.9;
	line-height: 1.6;
	margin: 0;
}

.form-row {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 1rem;
}

.form-note {
	font-size: 0.875rem;
	color: white;
	opacity: 0.8;
	text-align: center;
	line-height: 1.4;
	margin-top: 0.5rem;
}

.quote-submit-button {
	width: 100%;
	margin-top: 1rem;
}

/* Form components styling */
:global(.quote-form .form-input),
:global(.quote-form .form-select),
:global(.quote-form .form-textarea) {
	min-height: 44px;
	font-size: 16px;
	border-radius: var(--theme-shape-radius);
	padding: 0.75rem 1rem;
	border: 2px solid rgba(255, 255, 255, 0.3);
	background: rgba(255, 255, 255, 0.1);
	color: white;
	transition: var(--theme-transition);
	font-family: var(--theme-font-family-sans);
}

:global(.quote-form .form-input::placeholder),
:global(.quote-form .form-textarea::placeholder) {
	color: rgba(255, 255, 255, 0.6);
}

:global(.quote-form .form-input:focus),
:global(.quote-form .form-select:focus),
:global(.quote-form .form-textarea:focus) {
	outline: none;
	border-color: #FFC107;
	box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.3);
}

:global(.quote-form .form-textarea) {
	min-height: 120px;
	resize: vertical;
}

:global(.quote-form button) {
	width: 100%;
	min-height: 48px;
	background: #FFC107;
	color: #002F4B;
	border: none;
	border-radius: var(--theme-button-border-radius);
	font-size: 1rem;
	font-weight: 600;
	font-family: var(--theme-font-family-sans);
	cursor: pointer;
	transition: var(--theme-transition);
	box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

:global(.quote-form button:hover) {
	background: #E6AC00;
	color: #002F4B;
	transform: translateY(-2px);
	box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
}

:global(.quote-form label) {
	font-weight: 600;
	color: white;
	margin-bottom: 0.5rem;
	display: block;
	font-size: 0.875rem;
}

/* Success Message Styling */
.form-success {
	background: #002F4B;
	padding: 2rem;
	border-radius: var(--theme-shape-radius);
	box-shadow: 0 4px 16px var(--theme-shadow-light);
	text-align: center;
	color: white;
}

.form-success h3 {
	color: #FFC107;
	font-size: 1.5rem;
	margin-bottom: 1rem;
	font-weight: 700;
}

.form-success p {
	margin-bottom: 1rem;
	line-height: 1.6;
}

.success-contact a {
	color: #FFC107;
	text-decoration: none;
	font-weight: 600;
}

.success-contact a:hover {
	text-decoration: underline;
}

/* Mobile Responsive */
@media (max-width: 768px) {
	.form-row {
		grid-template-columns: 1fr;
	}
	
	.quote-form {
		padding: 1.5rem;
	}
	
	.form-header h3 {
		font-size: 1.5rem;
	}
	
	.form-header {
		margin-bottom: 1.5rem;
	}
}
</style>

<script>
	// Initialize form submission state
	let submitted = false;
	
	// Handle form submission success
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.querySelector('.quote-form');
		const successDiv = document.getElementById('form-success');
		
		// Add form submit event listener
		form.addEventListener('submit', function() {
			submitted = true;
		});
	});
</script>