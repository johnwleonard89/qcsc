	"description": "Premier concrete coating specialists serving Cincinnati tri-state area with veteran-owned precision",
	"url": "https://queencitysurfacecoatings.com",
	"telephone": "+1-513-296-5525",
	"email": "john@queencitysurfacecoatings.com",
	"address": {
		"@type": "PostalAddress",
		"addressLocality": "Cincinnati",
		"addressRegion": "OH",
		"addressCountry": "US"
	},
	"geo": {
		"@type": "GeoCoordinates",
		"latitude": "39.1031",
		"longitude": "-84.5120"
	},
	"openingHours": [
		"Mo-Fr 07:00-18:00",
		"Sa 08:00-16:00",
		"Su 00:00-00:00"
	],
	"serviceArea": {
		"@type": "GeoCircle",
		"geoMidpoint": {
			"@type": "GeoCoordinates",
			"latitude": "39.1031",
			"longitude": "-84.5120"
		},
		"geoRadius": "50000"
	},
	"founder": {
		"@type": "Person",
		"name": "John Leonard",
		"description": "Marine Corps Veteran and Founder"
	},
	"hasOfferCatalog": {
		"@type": "OfferCatalog",
		"name": "Surface Coating Services",
		"itemListElement": [
			{
