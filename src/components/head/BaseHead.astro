				}
			},
			{
				"@type": "Offer",
				"itemOffered": {
					"@type": "Service",
					"name": "Polyaspartic Coating",
					"description": "Fast-curing, UV-resistant floor coatings"
				}
			},
			{
				"@type": "Offer",
				"itemOffered": {
					"@type": "Service",
					"name": "Metallic Epoxy Flooring",
