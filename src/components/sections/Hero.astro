---
export interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const { 
  title, 
  subtitle, 
  backgroundImage = '/images/hero-background.jpg',
  ctaText = 'Get Free Estimate',
  ctaLink = '/contact',
  secondaryCtaText = 'Our Services',
  secondaryCtaLink = '/services'
} = Astro.props;
---

<section class="relative bg-gray-900 text-white py-20 md:py-32 overflow-hidden">
  <!-- Background Image -->
  <div 
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url(${backgroundImage})`}
  ></div>
  
  <!-- Overlay -->
  <div class="absolute inset-0 bg-gray-900 bg-opacity-60"></div>
  
  <!-- Content -->
  <div class="relative container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
      {title}
    </h1>
    
    {subtitle && (
      <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto">
        {subtitle}
      </p>
    )}
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href={ctaLink}
        class="bg-blue-600 text-white px-8 py-4 rounded-md hover:bg-blue-700 transition-colors font-semibold text-lg inline-block"
      >
        {ctaText}
      </a>
      
      <a 
        href={secondaryCtaLink}
        class="border-2 border-white text-white px-8 py-4 rounded-md hover:bg-white hover:text-gray-900 transition-colors font-semibold text-lg inline-block"
      >
        {secondaryCtaText}
      </a>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="w-full h-16 text-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M1200 120L0 16.48V0h1200v120z" fill="currentColor"></path>
    </svg>
  </div>
</section>