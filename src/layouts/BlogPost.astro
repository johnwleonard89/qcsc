---
import { Container, TextCardSection, CtaCardSection } from '@components/odyssey-theme';
import Layout from './Page.astro'; 
import QuoteRequestForm from '../components/forms/QuoteRequestForm.astro';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    publish_date: Date;
    author: string;
    tags?: string[];
    featured_image?: string;
    seo_title?: string;
    seo_description?: string;
  }
}

const { frontmatter } = Astro.props;

const seo = {
  title: frontmatter.seo_title || frontmatter.title,
  description: frontmatter.seo_description || frontmatter.description,
  image: frontmatter.featured_image,
};

const formattedDate = new Date(frontmatter.publish_date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long', 
  day: 'numeric'
});
---

<Layout seo={seo}>
  <div class="blog-post">
    {/* Hero Section */}
    <section class="blog-hero">
      <Container>
        <div class="blog-hero__content">
          {frontmatter.tags && frontmatter.tags.length > 0 && (
            <div class="blog-tags">
              {frontmatter.tags.map(tag => (
                <span class="blog-tag">{tag}</span>
              ))}
            </div>
          )}
          
          <h1 class="blog-title">{frontmatter.title}</h1>
          
          <div class="blog-meta">
            <div class="blog-author">
              <span class="author-label">By</span>
              <span class="author-name">{frontmatter.author}</span>
            </div>
            <div class="blog-date">
              <time datetime={frontmatter.publish_date.toISOString()}>
                {formattedDate}
              </time>
            </div>
          </div>
          
          <p class="blog-description">{frontmatter.description}</p>
        </div>
        
        {frontmatter.featured_image && (
          <div class="blog-hero__image">
            <img src={frontmatter.featured_image} alt={frontmatter.title} />
          </div>
        )}
      </Container>
    </section>

    {/* Main Content */}
    <Container narrow>
      <article class="blog-content">
        <slot />
      </article>
    </Container>

    {/* Related Services CTA */}
    <section class="related-services">
      <Container>
        <TextCardSection>
          <div class="services-cta">
            <h2>Ready to Transform Your Concrete Surface?</h2>
            <p>Our veteran-owned team brings military precision to every concrete coating project. Get your free estimate today and see why Cincinnati homeowners trust Queen City Surface Coatings.</p>
            
            <div class="service-highlights">
              <div class="service-item">
                <h3><a href="/services/garage-floor-epoxy">Garage Floor Epoxy</a></h3>
                <p>Transform your garage with durable, beautiful epoxy coatings.</p>
              </div>
              <div class="service-item">
                <h3><a href="/services/basement-floor-coating">Basement Floor Coating</a></h3>
                <p>Waterproof and beautify your basement floors.</p>
              </div>
              <div class="service-item">
                <h3><a href="/services/commercial-concrete-coating">Commercial Flooring</a></h3>
                <p>Professional-grade solutions for businesses.</p>
              </div>
            </div>

            <div class="cta-actions">
              <a href="tel:+15132965525" class="cta-button primary">
                Call (513) 296-5525
              </a>
              <a href="/company/contact" class="cta-button secondary">
                Get Free Estimate
              </a>
            </div>
          </div>
        </TextCardSection>
      </Container>
    </section>

    {/* Contact Form */}
    <section class="blog-contact-form">
      <Container>
        <TextCardSection>
          <div class="form-section">
            <h2>Get Your Free Estimate</h2>
            <p>Ready to upgrade your concrete surfaces? Fill out the form below for a detailed estimate tailored to your project.</p>
            <QuoteRequestForm formId="blog" />
          </div>
        </TextCardSection>
      </Container>
    </section>
  </div>
</Layout>

<style>
  /* Hero Section */
  .blog-hero {
    background: linear-gradient(135deg, var(--theme-surface-1) 0%, var(--theme-surface-2) 100%);
    padding: 3rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .blog-hero__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .blog-tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .blog-tag {
    background: rgba(var(--theme-primary-rgb), 0.1);
    color: var(--theme-primary);
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: capitalize;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--theme-text-1);
    margin-bottom: 1.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .blog-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    color: var(--theme-text-2);
  }

  .blog-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .author-label {
    opacity: 0.8;
  }

  .author-name {
    font-weight: 600;
    color: var(--theme-primary);
  }

  .blog-date {
    opacity: 0.8;
  }

  .blog-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: var(--theme-text-2);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-hero__image {
    margin-top: 2rem;
    text-align: center;
  }

  .blog-hero__image img {
    max-width: 100%;
    height: auto;
    border-radius: var(--theme-shape-radius);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  /* Content Section */
  .blog-content {
    padding: 3rem 0;
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--theme-text-1);
  }

  /* Typography in content */
  .blog-content :global(h2) {
    font-size: 2rem;
    font-weight: 600;
    color: var(--theme-text-1);
    margin: 2.5rem 0 1.5rem 0;
    line-height: 1.3;
  }

  .blog-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--theme-text-1);
    margin: 2rem 0 1rem 0;
    line-height: 1.4;
  }

  .blog-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--theme-text-1);
    margin: 1.5rem 0 1rem 0;
  }

  .blog-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .blog-content :global(ul),
  .blog-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .blog-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .blog-content :global(blockquote) {
    background: var(--theme-surface-1);
    border-left: 4px solid var(--theme-primary);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    border-radius: 0 var(--theme-shape-radius) var(--theme-shape-radius) 0;
  }

  .blog-content :global(strong) {
    font-weight: 600;
    color: var(--theme-text-1);
  }

  .blog-content :global(a) {
    color: var(--theme-primary);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: border-bottom-color 0.2s ease;
  }

  .blog-content :global(a:hover) {
    border-bottom-color: var(--theme-primary);
  }

  /* Related Services Section */
  .related-services {
    background: var(--theme-surface-1);
    padding: 4rem 0;
  }

  .services-cta {
    text-align: center;
  }

  .services-cta h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--theme-text-1);
  }

  .services-cta > p {
    font-size: 1.1rem;
    margin-bottom: 2.5rem;
    color: var(--theme-text-2);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .service-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .service-item {
    background: white;
    padding: 1.5rem;
    border-radius: var(--theme-shape-radius);
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .service-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .service-item h3 {
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .service-item h3 a {
    color: var(--theme-primary);
    text-decoration: none;
    font-weight: 600;
  }

  .service-item h3 a:hover {
    text-decoration: underline;
  }

  .service-item p {
    margin: 0;
    color: var(--theme-text-2);
    font-size: 0.95rem;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    border-radius: var(--theme-button-border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    min-height: 48px;
    font-size: 1rem;
  }

  .cta-button.primary {
    background: var(--theme-primary);
    color: white;
    border: 2px solid var(--theme-primary);
  }

  .cta-button.primary:hover {
    background: var(--theme-primary-dark, var(--theme-primary));
    transform: translateY(-1px);
  }

  .cta-button.secondary {
    background: transparent;
    color: var(--theme-primary);
    border: 2px solid var(--theme-primary);
  }

  .cta-button.secondary:hover {
    background: var(--theme-primary);
    color: white;
    transform: translateY(-1px);
  }

  /* Contact Form Section */
  .blog-contact-form {
    padding: 4rem 0;
  }

  .form-section {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .form-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--theme-text-1);
  }

  .form-section p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    color: var(--theme-text-2);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-title {
      font-size: 2rem;
    }

    .blog-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .blog-content {
      font-size: 1rem;
    }

    .blog-content :global(h2) {
      font-size: 1.75rem;
    }

    .blog-content :global(h3) {
      font-size: 1.4rem;
    }

    .service-highlights {
      grid-template-columns: 1fr;
    }

    .cta-actions {
      flex-direction: column;
    }

    .cta-button {
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .blog-hero {
      padding: 2rem 0;
    }

    .blog-title {
      font-size: 1.75rem;
    }

    .blog-tags {
      justify-content: center;
    }

    .blog-tag {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style>