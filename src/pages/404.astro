---
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';

const seo = {
	title: '404 - Page Not Found | Queen City Surface Coatings',
	description: 'The page you are looking for could not be found. Browse our concrete coating services or return to our homepage.',
	keywords: 'page not found, Queen City Surface Coatings, concrete coating services Cincinnati',
	type: 'website'
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>404 - Page Not Found</h1>
			<h2>We couldn't find the page you're looking for</h2>
			<p>The page may have been moved, deleted, or you may have typed the URL incorrectly.</p>
			
			<div class="helpful-links">
				<h3>Try these popular pages instead:</h3>
				<ul>
					<li><a href="/services/">Our Services</a></li>
					<li><a href="/services/garage-floor-epoxy/">Garage Floor Epoxy</a></li>
					<li><a href="/portfolio/">View Our Work</a></li>
					<li><a href="/company/contact/">Get Free Estimate</a></li>
					<li><a href="/service-areas/">Service Areas</a></li>
				</ul>
			</div>
			
			<div class="cta-buttons__container">
				<Button href="/">Return Home</Button>
				<Button href="/company/contact/">Contact Us</Button>
			</div>
		</TextCardSection>
	</Container>
</Layout>

<style>
	.helpful-links {
		margin: 2rem 0;
		text-align: left;
	}
	
	.helpful-links h3 {
		color: var(--theme-primary);
		margin-bottom: 1rem;
	}
	
	.helpful-links ul {
		list-style: none;
		padding: 0;
	}
	
	.helpful-links li {
		margin-bottom: 0.5rem;
	}
	
	.helpful-links a {
		color: var(--theme-primary);
		text-decoration: none;
		padding: 0.25rem 0;
		display: inline-block;
		border-bottom: 1px transparent;
		transition: border-color var(--theme-transition);
	}
	
	.helpful-links a:hover {
		border-bottom-color: var(--theme-primary);
	}
	
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
	}
	
	.cta-buttons__container :global(a) {
		margin: 0;
	}
</style>
