---
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';
import QuoteRequestForm from '../../components/forms/QuoteRequestForm.astro';
import { companyPages } from '../../data/pageTemplates.js';

const pageData = companyPages.about;
---

<Layout seo={pageData.seo}>
  <!-- Simple Hero Section - Clean Background -->
  <section class="bg-white py-16 md:py-20 border-b border-gray-200">
    <Container>
      <div class="max-w-4xl mx-auto text-center">
        <nav class="mb-8" aria-label="Breadcrumb">
          <ul class="flex justify-center items-center space-x-2 text-sm">
            <li class="flex items-center">
              <a href="/" class="text-primary-600 hover:text-primary-700 transition-colors">
                Home
              </a>
              <span class="mx-2 text-gray-400">â†’</span>
            </li>
            <li class="flex items-center">
              <span class="text-gray-600 font-medium" aria-current="page">About</span>
            </li>
          </ul>
        </nav>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          About Queen City Surface Coatings
        </h1>
        <p class="text-xl md:text-2xl font-semibold text-primary-600 mb-4">
          Veteran-Owned Excellence in Concrete Coatings
        </p>
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed">
          Serving the Cincinnati tri-state area with professional concrete coating solutions built on military precision and family values.
        </p>
      </div>
    </Container>
  </section>

  <!-- Dynamic Content Sections -->
  {pageData.content.sections.map((section, index) => (
    <section class={index % 2 === 0 ? 'py-16 md:py-20 bg-white' : 'py-16 md:py-20 bg-gray-50'}>
      <Container>
        <div class="max-w-4xl mx-auto">
          {section.type === 'text' && (
            <div>
              {section.title && (
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
                  {section.title}
                </h2>
              )}
              {section.content && (
                <div class="prose prose-lg md:prose-xl mx-auto text-gray-600 leading-relaxed" set:html={section.content} />
              )}
            </div>
          )}

          {section.type === 'features' && (
            <div class="text-center">
              {section.title && (
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12">
                  {section.title}
                </h2>
              )}
              {section.items && (
                <div class="grid grid-template-columns-4 gap-8 max-w-6xl mx-auto">
                  {section.items.map((item) => (
                    <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
                      <h3 class="text-lg font-semibold text-gray-900 mb-2">
                        {item}
                      </h3>
                    </div>
                  ))}
                </div>
              )}
            </div>
          )}

          {section.type === 'cta' && (
            <div class="text-center">
              {section.title && (
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
                  {section.title}
                </h2>
              )}
              {section.content && (
                <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                  {section.content}
                </p>
              )}
              <div class="hero-ctas">
                <a href="/company/contact" class="btn btn-primary btn-large">Get Your Free Estimate</a>
                <a href="tel:+15132965525" class="btn btn-outline btn-large">(513) 296-5525</a>
              </div>
            </div>
          )}

          {section.type === 'contact' && (
            <div class="text-center">
              {section.title && (
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
                  {section.title}
                </h2>
              )}
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl mx-auto">
                <div class="bg-gradient-to-br from-blue-900 to-blue-800 p-8 rounded-xl border border-blue-700">
                  <div class="text-center">
                    <div class="text-4xl mb-4">ðŸ“ž</div>
                    <h3 class="text-xl font-bold text-white mb-4">Call Now</h3>
                    <a 
                      href="tel:+15132965525" 
                      class="btn btn-primary btn-large"
                    >
                      (513) 296-5525
                    </a>
                  </div>
                </div>
                
                <div class="bg-gradient-to-br from-blue-900 to-blue-800 p-8 rounded-xl border border-blue-700">
                  <div class="text-center">
                    <div class="text-4xl mb-4">ðŸ“§</div>
                    <h3 class="text-xl font-bold text-white mb-4">Email Us</h3>
                    <a 
                      href="mailto:john@queencitysurfacecoatings.com" 
                      class="btn btn-outline btn-large"
                    >
                      Send Email
                    </a>
                  </div>
                </div>
              </div>
            </div>
          )}

          {section.type === 'form' && (
            <div class="text-center">
              {section.title && (
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
                  {section.title}
                </h2>
              )}
              {section.content && (
                <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                  {section.content}
                </p>
              )}
              <div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-lg border border-gray-200">
                <QuoteRequestForm />
              </div>
            </div>
          )}
        </div>
      </Container>
    </section>
  ))}
</Layout>

<style>
/* Simple grid for features */
.grid-template-columns-4 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

@media (min-width: 1024px) {
  .grid-template-columns-4 {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (max-width: 768px) {
  .grid-template-columns-4 {
    grid-template-columns: 1fr;
  }
}

/* Center headings and add spacing */
.prose h2,
.prose h4 {
  text-align: center;
}

/* Add more spacing to prose content - double-spaced paper style */
.prose {
  line-height: 2.2;
}

.prose p {
  margin-bottom: 2.5rem;
  text-align: left;
}

.prose h2 {
  margin-top: 4rem;
  margin-bottom: 2.5rem;
}

.prose h4 {
  margin-top: 3rem;
  margin-bottom: 2rem;
  font-weight: 600;
  font-size: 1.25rem;
}

.prose ul {
  margin-bottom: 2.5rem;
  margin-top: 1.5rem;
}

.prose li {
  margin-bottom: 1rem;
  line-height: 2.2;
}

.prose strong {
  display: block;
  margin-top: 2rem;
  margin-bottom: 1rem;
  font-size: 1.1rem;
}

/* Homepage CTA Buttons */
.hero-ctas {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 2rem;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 1rem 2rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  transition: all 0.3s ease;
  border: 2px solid transparent;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  min-width: 200px;
}

.btn-large {
  padding: 1.25rem 2.5rem;
  font-size: 1.1rem;
  min-width: 220px;
}

.btn-primary {
  background: #FFC107;
  border-color: #FFC107;
  color: #002F4B;
  box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
}

.btn-primary:hover {
  background: #E6AC00;
  border-color: #E6AC00;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 193, 7, 0.4);
  text-decoration: none;
  color: #002F4B;
}

.btn-outline {
  background: transparent;
  border-color: #FFC107;
  color: #FFC107;
}

.btn-outline:hover {
  background: #FFC107;
  border-color: #FFC107;
  color: #002F4B;
  transform: translateY(-2px);
  text-decoration: none;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .hero-ctas {
    flex-direction: column;
    align-items: center;
  }
  
  .btn {
    width: 100%;
    max-width: 300px;
  }
}
</style>