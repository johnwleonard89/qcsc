---
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';
import QuoteRequestForm from '../../components/forms/QuoteRequestForm.astro';
import { companyPages } from '../../data/pageTemplates.js';

const pageData = companyPages.about;
---

<Layout seo={pageData.seo}>
  <!-- Hero Section with consistent styling -->
  <section class="hero-section">
    <Container>
      <div class="hero-content-about">
        <div class="hero-text-about">
          <p class="hero-tagline">Veteran-Owned Excellence</p>
          <h1 class="hero-headline">About Queen City Surface Coatings</h1>
          <p class="hero-subheadline">
            Serving the Cincinnati tri-state area with professional concrete coating solutions built on military precision and family values.
          </p>
          <div class="hero-ctas">
            <a href="/company/contact#quote-form" class="btn btn-primary btn-large">Get Your Free Estimate</a>
            <a href="tel:+15132965525" class="btn btn-outline btn-large">(513) 296-5525</a>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Content Sections with consistent styling -->
  {pageData.content.sections.map((section, index) => (
    <section class={index % 2 === 0 ? 'content-section' : 'content-section alt-section'}>
      <Container>
        {section.type === 'text' && (
          <div class="text-section">
            {section.title && (
              <div class="section-header">
                <h2>{section.title}</h2>
              </div>
            )}
            {section.content && (
              <div class="text-content" set:html={section.content} />
            )}
          </div>
        )}

        {section.type === 'features' && (
          <div class="features-section">
            {section.title && (
              <div class="section-header">
                <h2>{section.title}</h2>
              </div>
            )}
            {section.items && (
              <div class="features-grid">
                {section.items.map((item) => (
                  <div class="feature-card">
                    <h3>{item}</h3>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {section.type === 'cta' && (
          <div class="cta-section">
            {section.title && (
              <div class="section-header">
                <h2>{section.title}</h2>
              </div>
            )}
            {section.content && (
              <p class="large-text">{section.content}</p>
            )}
            <div class="hero-ctas">
              <a href="/company/contact#quote-form" class="btn btn-primary btn-large">Get Your Free Estimate</a>
              <a href="tel:+15132965525" class="btn btn-outline btn-large">(513) 296-5525</a>
            </div>
          </div>
        )}

        {section.type === 'contact' && (
          <div class="contact-methods-section">
            {section.title && (
              <div class="section-header">
                <h2>{section.title}</h2>
              </div>
            )}
            <div class="contact-methods">
              <div class="contact-button-wrapper">
                <p class="contact-label">Call</p>
                <a href="tel:+15132965525" class="contact-button contact-button-phone">
                  <div class="contact-details">
                    <span class="contact-info">(513) 296-5525</span>
                  </div>
                </a>
              </div>
              
              <div class="contact-button-wrapper">
                <p class="contact-label">Email</p>
                <a href="mailto:john@queencitysurfacecoatings.com" class="contact-button contact-button-email">
                  <div class="contact-details">
                    <span class="contact-info">john@queencitysurfacecoatings.com</span>
                  </div>
                </a>
              </div>
            </div>
          </div>
        )}

        {section.type === 'form' && (
          <div class="form-section">
            {section.title && (
              <div class="section-header">
                <h2>{section.title}</h2>
              </div>
            )}
            {section.content && (
              <p class="large-text">{section.content}</p>
            )}
            <div class="form-container">
              <QuoteRequestForm />
            </div>
          </div>
        )}
      </Container>
    </section>
  ))}

  <!-- Contact Section - Exact Copy from Homepage -->
  <section class="contact-section">
    <Container>
      <div class="contact-content">
        <div class="contact-info">
          <h2>Ready to Transform Your Space?</h2>
          <p>Get your free, no-obligation estimate today. We'll assess your space and provide detailed recommendations tailored to your specific needs.</p>
          
          <div class="contact-methods">
            <div class="contact-button-wrapper">
              <a href="tel:+15132965525" class="contact-button contact-button-phone">
                <div class="contact-icon"></div>
                <div class="contact-details">
                  <h4>Call Now</h4>
                  <span class="contact-info">(513) 296-5525</span>
                  <span class="contact-availability">7 days a week</span>
                </div>
              </a>
            </div>
            
            <div class="contact-button-wrapper">
              <a href="mailto:john@queencitysurfacecoatings.com" class="contact-button contact-button-email">
                <div class="contact-icon"></div>
                <div class="contact-details">
                  <h4>Email Us</h4>
                  <span class="contact-info">john@queencitysurfacecoatings.com</span>
                  <span class="contact-availability">24 hour response</span>
                </div>
              </a>
            </div>
          </div>
          
          <div class="business-hours">
            <h4>Business Hours</h4>
            <div class="hours-list">
              <div class="hours-item">
                <span>Monday - Friday:</span>
                <span class="hours-time">7:00 AM - 6:00 PM</span>
              </div>
              <div class="hours-item">
                <span>Saturday:</span>
                <span class="hours-time">8:00 AM - 4:00 PM</span>
              </div>
              <div class="hours-item">
                <span>Sunday:</span>
                <span class="hours-time">By Appointment</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="contact-form">
          <QuoteRequestForm />
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
/* Hero Section Styling - consistent with PremiumServiceTemplate */
.hero-section {
  background: linear-gradient(135deg, var(--theme-surface-2) 0%, var(--theme-navy-dark) 100%);
  color: var(--theme-on-surface-2);
  padding: 4rem 0;
  margin-bottom: 3rem;
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 80%, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 193, 7, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.hero-content-about {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
  position: relative;
  z-index: 1;
}

.hero-text-about {
  text-align: center;
  max-width: 800px;
}

.hero-tagline {
  font-family: var(--theme-font-family-headings);
  font-size: 1.375rem;
  font-weight: var(--font-weight-medium);
  color: #FFC107;
  margin-bottom: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  opacity: 0.95;
}

.hero-headline {
  font-family: var(--theme-font-family-headings);
  font-size: var(--font-size-h1);
  font-weight: var(--font-weight-bold);
  margin-bottom: 1rem;
  line-height: var(--line-height-tight);
  color: #FFC107;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.hero-subheadline {
  font-size: 1.25rem;
  margin-bottom: 2.5rem;
  opacity: 0.95;
  line-height: var(--line-height-relaxed);
  color: rgba(255, 255, 255, 0.9);
}

/* Content Sections */
.content-section {
  padding: 4rem 0;
}

.alt-section {
  background: var(--theme-surface-1);
}

/* Section Headers */
.section-header {
  text-align: center;
  margin-bottom: 3rem;
}

.section-header h2 {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--theme-text-primary);
  margin-bottom: 1.5rem;
}

/* Text Content */
.text-section {
  max-width: 800px;
  margin: 0 auto;
}

.text-content {
  font-size: 1.125rem;
  line-height: 2.0;
  color: var(--theme-text-secondary);
  text-align: left;
}

.text-content h2 {
  font-size: 2rem;
  font-weight: var(--font-weight-bold);
  color: var(--theme-text-primary);
  margin: 3rem 0 2rem 0;
  text-align: center;
}

.text-content h4 {
  font-size: 1.25rem;
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  margin: 2rem 0 1rem 0;
  text-align: left;
}

.text-content p,
.text-content div p,
.text-section p,
.text-section div p {
  margin-bottom: 6rem !important;
  margin-top: 0 !important;
  text-align: left !important;
  line-height: 2.0 !important;
  text-indent: 2rem !important;
}

/* Global override for all paragraphs in text sections */
.content-section p {
  margin-bottom: 6rem !important;
  text-align: left !important;
  line-height: 2.0 !important;
  text-indent: 2rem !important;
}

.text-content ul {
  margin: 2rem 0;
  text-align: left;
}

.text-content li {
  margin-bottom: 0.75rem;
  line-height: var(--line-height-relaxed);
}

.text-content strong {
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
}

/* Features Grid */
.features-section {
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  justify-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.feature-card {
  background: var(--theme-bg);
  padding: 2rem;
  border-radius: var(--theme-card-radius);
  text-align: center;
  box-shadow: var(--theme-shadow-light);
  border: 1px solid var(--theme-border-light);
  transition: transform var(--theme-transition);
  width: 100%;
  max-width: 300px;
}

.feature-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--theme-shadow-medium);
}

.feature-card h3 {
  font-size: 1.125rem;
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  margin: 0;
}

/* CTA Section */
.cta-section {
  text-align: center;
}

.large-text {
  font-size: 1.25rem;
  line-height: var(--line-height-relaxed);
  color: var(--theme-text-secondary);
  margin-bottom: 2rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

/* Contact Methods */
.contact-methods-section {
  text-align: center;
}

.contact-methods {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  margin-top: 2rem;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

.contact-button-wrapper {
  width: 100%;
}

.contact-label {
  font-size: 1rem;
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  text-align: center;
  margin: 0 0 0.5rem 0;
}

.contact-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 0.25rem;
  padding: 1rem;
  border-radius: var(--theme-card-radius);
  border: none;
  transition: var(--theme-transition);
  text-decoration: none;
  width: 100%;
  cursor: pointer;
  min-height: 60px;
  justify-content: center;
}

.contact-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

.contact-button-phone {
  background: #FFC107;
  color: #002F4B;
}

.contact-button-phone:hover {
  background: #E6AC00;
  color: #002F4B;
}

.contact-button-email {
  background: #002F4B;
  color: white;
}

.contact-button-email:hover {
  background: #001f36;
  color: white;
}

.contact-button-email .contact-info {
  color: #FFC107;
  font-size: 0.9rem;
}

.contact-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.contact-details .contact-info {
  font-size: 1rem;
  font-weight: var(--font-weight-semibold);
  margin: 0;
}

/* Form Section */
.form-section {
  text-align: center;
}

.form-container {
  max-width: 600px;
  margin: 2rem auto 0;
  background: var(--theme-bg);
  padding: 2rem;
  border-radius: var(--theme-card-radius);
  box-shadow: var(--theme-shadow-light);
  border: 1px solid var(--theme-border-light);
}

/* Buttons */
.hero-ctas {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 2rem;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 1rem 2rem;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  transition: all 0.3s ease;
  border: 2px solid transparent;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  min-width: 200px;
}

.btn-large {
  padding: 1.25rem 2.5rem;
  font-size: 1.1rem;
  min-width: 220px;
}

.btn-primary {
  background: #FFC107;
  border-color: #FFC107;
  color: #002F4B;
  box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
}

.btn-primary:hover {
  background: #E6AC00;
  border-color: #E6AC00;
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 193, 7, 0.4);
  text-decoration: none;
  color: #002F4B;
}

.btn-outline {
  background: transparent;
  border-color: #FFC107;
  color: #FFC107;
}

.btn-outline:hover {
  background: #FFC107;
  border-color: #FFC107;
  color: #002F4B;
  transform: translateY(-2px);
  text-decoration: none;
}

/* Hero section button overrides */
.hero-section .btn-primary {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #002F4B !important;
}

.hero-section .btn-primary:hover {
  background: #E6AC00 !important;
  border-color: #E6AC00 !important;
  color: #002F4B !important;
}

.hero-section .btn-outline {
  background: transparent !important;
  border-color: #FFC107 !important;
  color: #FFC107 !important;
}

.hero-section .btn-outline:hover {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #002F4B !important;
}

/* Force paragraph spacing with highest specificity */
.content-section .text-content p {
  margin-bottom: 6rem !important;
  text-indent: 2rem !important;
  line-height: 2.0 !important;
}

/* Force for any nested divs */
.content-section .text-content div p {
  margin-bottom: 6rem !important;
  text-indent: 2rem !important;
  line-height: 2.0 !important;
}

/* Ultra-specific targeting */
section.content-section div.text-content p {
  margin-bottom: 6rem !important;
  text-indent: 2rem !important;
  line-height: 2.0 !important;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .features-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 0;
  }
  
  .hero-headline {
    font-size: 2rem;
  }
  
  .section-header h2 {
    font-size: 2rem;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .hero-ctas {
    flex-direction: column;
    align-items: center;
  }
  
  .btn {
    width: 100%;
    max-width: 300px;
  }
  
  .contact-methods {
    max-width: 300px;
  }
}

@media (max-width: 480px) {
  .hero-headline {
    font-size: 1.75rem;
  }
  
  .section-header h2 {
    font-size: 1.75rem;
  }
  
  .large-text {
    font-size: 1.125rem;
  }
  
  .feature-card {
    padding: 1.5rem;
  }
}

/* Contact Section - Exact Copy from Homepage */
.contact-section {
  background: var(--theme-surface-1);
  padding: 4rem 0;
}

.contact-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: start;
}

.contact-info h2 {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--theme-text-primary);
  margin-bottom: 1rem;
  text-align: center;
}

.contact-info > p {
  font-size: 1.125rem;
  line-height: var(--line-height-relaxed);
  margin-bottom: 2rem;
  color: var(--theme-text-secondary);
}

.contact-methods {
  display: flex;
  flex-direction: row;
  gap: 1rem;
  margin-bottom: 2rem;
  justify-content: center;
}

.contact-button-wrapper {
  width: 280px;
  height: 120px;
}

.contact-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 0.5rem;
  padding: 0.75rem;
  border-radius: var(--theme-card-radius);
  border: 2px solid transparent;
  transition: var(--theme-transition);
  text-decoration: none;
  width: 280px;
  height: 120px;
  min-width: 280px;
  max-width: 280px;
  min-height: 120px;
  max-height: 120px;
  cursor: pointer;
  justify-content: center;
  box-sizing: border-box;
}

.contact-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

/* Phone button - Yellow background, blue text */
.contact-button-phone {
  background: #FFC107;
  color: #002F4B;
}

.contact-button-phone:hover {
  background: #E6AC00;
  color: #002F4B;
}

/* Email button - Blue background, white text (except email address) */
.contact-button-email {
  background: #002F4B;
  color: white;
}

.contact-button-email:hover {
  background: #001f36;
  color: white;
}

/* Keep email address yellow, ensure other text is white */
.contact-button-email .contact-info {
  color: #FFC107;
  font-size: 0.75rem;
}

.contact-button-email h4,
.contact-button-email .contact-availability {
  color: white;
}

.contact-icon {
  font-size: 2rem;
}

.contact-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 0.25rem;
}

.contact-details h4 {
  font-weight: var(--font-weight-semibold);
  margin: 0;
  font-size: 0.75rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.contact-info {
  font-size: 0.7rem;
  font-weight: var(--font-weight-semibold);
  display: block;
  margin: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.contact-availability {
  font-size: 0.6rem;
  opacity: 0.8;
  margin: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.business-hours {
  background: var(--theme-bg);
  padding: 1.5rem;
  border-radius: var(--theme-card-radius);
}

.business-hours h4 {
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  margin-bottom: 1rem;
  font-size: 1.125rem;
}

.hours-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.hours-item {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0;
  border-bottom: 1px solid var(--theme-border-light);
  font-size: 1rem;
}

.hours-item:last-child {
  border-bottom: none;
}

.hours-time {
  font-weight: var(--font-weight-medium);
}


/* Global paragraph spacing - at least 2 spaces between paragraphs */
p {
  margin-bottom: 3rem !important;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .contact-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .contact-methods {
    flex-direction: column;
  }
}

@media (max-width: 768px) {
  .contact-methods {
    flex-direction: column;
  }
}
</style>