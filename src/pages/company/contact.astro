		</div>
	</CtaCardSection>
</Layout>

<style>
	/* Page Header */
	.page-header {
		text-align: center;
		padding: 2rem 0 3rem 0;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		margin-bottom: 3rem;
	}

	.breadcrumb {
		margin-bottom: 1.5rem;
	}

	.breadcrumb ol {
		display: flex;
		justify-content: center;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
		font-size: 0.9rem;
	}

	.breadcrumb li:not(:last-child)::after {
		content: ">";
		margin-left: 0.5rem;
		opacity: 0.6;
	}

	.breadcrumb a {
		color: var(--theme-primary);
		text-decoration: none;
	}

	.breadcrumb a:hover {
		text-decoration: underline;
	}

	.page-header h1 {
		font-size: 3rem;
		color: var(--theme-on-bg);
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: var(--theme-on-bg);
		opacity: 0.8;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.5;
	}

	/* Contact Info Section */
	.contact-info-section {
		margin: 4rem 0;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
	}

	.contact-details h2 {
		color: var(--theme-primary);
		font-size: 2.5rem;
		margin-bottom: 2rem;
	}

	.contact-methods {
		margin-bottom: 3rem;
	}

	.contact-method {
		display: flex;
		gap: 1.5rem;
		margin-bottom: 2rem;
		padding: 2rem;
		background: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
		border: 1px solid rgba(0, 0, 0, 0.05);
	}

	.contact-method.priority {
		background: linear-gradient(135deg, #002F4B 0%, #003B5C 100%);
		border-color: #FFC107;
		border-width: 2px;
	}

	.contact-method.priority .method-content h3,
	.contact-method.priority .phone-number,
	.contact-method.priority .availability {
		color: #FFC107;
	}

	.contact-method.priority .method-content p {
		color: rgba(255, 255, 255, 0.9);
	}

	.contact-method.priority .method-icon {
		filter: sepia(1) saturate(2) hue-rotate(35deg);
	}

	.method-icon {
		font-size: 2rem;
		flex-shrink: 0;
		margin-top: 0.25rem;
	}

	.method-content h3 {
		color: var(--theme-primary);
		margin-bottom: 0.5rem;
		font-size: 1.25rem;
	}

	.phone-number {
		color: var(--theme-primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 1.5rem;
		display: block;
		margin-bottom: 0.25rem;
	}

	.phone-number:hover {
		text-decoration: underline;
	}

	.email-link {
		color: var(--theme-primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
		display: block;
		margin-bottom: 0.25rem;
	}

	.email-link:hover {
		text-decoration: underline;
	}

	.availability,
	.response-time {
		display: block;
		font-size: 0.9rem;
		opacity: 0.8;
		margin-bottom: 1rem;
		font-weight: 500;
		color: var(--theme-primary);
	}

	.method-content p {
		line-height: 1.5;
		margin: 0;
	}

	.method-content address {
		font-style: normal;
		line-height: 1.4;
		margin-bottom: 1rem;
	}

	.method-content address strong {
		color: var(--theme-primary);
		display: block;
		margin-bottom: 0.25rem;
	}

	/* Business Hours */
	.business-hours {
		background: var(--theme-surface-1);
		padding: 2rem;
		border-radius: var(--theme-shape-radius);
	}

	.business-hours h3 {
		color: var(--theme-primary);
		margin-bottom: 1.5rem;
		font-size: 1.5rem;
	}

	.hours-grid {
		margin-bottom: 1rem;
	}

	.hours-row {
		display: flex;
		justify-content: space-between;
		padding: 0.75rem 0;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
	}

	.hours-row:last-child {
		border-bottom: none;
	}

	.day {
		font-weight: 500;
	}

	.time {
		color: var(--theme-primary);
		font-weight: 600;
	}

	.hours-note {
		font-size: 0.9rem;
		opacity: 0.8;
		margin: 0;
		padding-top: 1rem;
		border-top: 1px solid rgba(0, 0, 0, 0.1);
	}

	/* Emergency Section */
	.emergency-section {
		background: var(--theme-surface-2);
		color: var(--theme-on-surface-2);
		padding: 3rem 0;
		margin: 4rem 0;
	}

	.emergency-header {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.emergency-icon {
		font-size: 2.5rem;
	}

	.emergency-header h2 {
		color: #FFC107;
		font-size: 2rem;
		margin: 0;
	}

	.emergency-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	.emergency-item {
		text-align: center;
		background: rgba(255, 255, 255, 0.1);
		padding: 2rem;
		border-radius: var(--theme-shape-radius);
	}

	.emergency-item h3 {
		color: #FFC107;
		margin-bottom: 1rem;
		font-size: 1.25rem;
	}

	.emergency-item p {
		margin-bottom: 1.5rem;
		line-height: 1.5;
	}

	.emergency-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 1rem 2rem;
		background: #FFC107;
		color: #002F4B;
		text-decoration: none;
		border-radius: var(--theme-button-border-radius);
		font-weight: 600;
		transition: all var(--theme-transition);
		min-height: 48px;
		border: 2px solid #FFC107;
		box-shadow: 0 4px 16px rgba(255, 193, 7, 0.2);
	}

	.emergency-btn:hover {
		background: #E6AC00;
		border-color: #E6AC00;
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(255, 193, 7, 0.3);
	}

	.emergency-btn.secondary {
		background: transparent;
		color: #FFC107;
		border: 2px solid #FFC107;
		box-shadow: none;
	}

	.emergency-btn.secondary:hover {
		background: #FFC107;
		color: #002F4B;
		box-shadow: 0 4px 16px rgba(255, 193, 7, 0.3);
	}

	/* Service Area Section */
	.service-area-section {
		margin: 4rem 0;
	}

	.service-area-section h2 {
		color: var(--theme-primary);
		font-size: 2.5rem;
		text-align: center;
		margin-bottom: 3rem;
	}

	.service-area-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: start;
	}

	.service-map {
		position: relative;
	}

	.map-placeholder {
		height: 400px;
		background: linear-gradient(135deg, var(--theme-surface-2) 0%, #1a2332 100%);
		border-radius: var(--theme-shape-radius);
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
	}

	.map-overlay {
		text-align: center;
		color: var(--theme-on-surface-2);
		z-index: 2;
	}

	.map-overlay h3 {
		color: #FFC107;
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	.map-overlay p {
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.coverage-stats {
		display: flex;
		justify-content: center;
		gap: 2rem;
	}

	.stat {
		text-align: center;
	}

	.stat strong {
		display: block;
		font-size: 2rem;
		color: #FFC107;
		font-weight: 700;
	}

	.stat span {
		font-size: 0.9rem;
		opacity: 0.8;
	}

	.coverage-details {
		display: grid;
		gap: 2rem;
	}

	.state-coverage {
		background: var(--theme-surface-1);
		padding: 1.5rem;
		border-radius: var(--theme-shape-radius);
	}

	.state-coverage h4 {
		color: var(--theme-primary);
		margin-bottom: 1rem;
		font-size: 1.25rem;
	}

	.state-coverage ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.state-coverage li {
