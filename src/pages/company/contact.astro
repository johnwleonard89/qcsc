---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import QuoteRequestForm from '../../components/forms/QuoteRequestForm.astro';

const seo = {
  title: 'Contact Queen City Surface Coatings Cincinnati | Free Estimate (513) 296-5525',
  description: 'Contact Queen City Surface Coatings for professional concrete coating services in Cincinnati. Call (513) 296-5525 for immediate service or request a free estimate online.',
  keywords: 'contact Queen City Surface Coatings, Cincinnati concrete coating quote, free estimate, (513) 296-5525, concrete coating contractor Ohio'
};
---

<Layout {seo}>
  <!-- Hero Section -->
  <section class="hero-section">
    <Container>
      <div class="hero-content">
        <div class="hero-text">
          <p class="hero-tagline">Ready to Transform?</p>
          <h1 class="hero-headline">Get Your Free Estimate Today</h1>
          <p class="hero-subheadline">
            Discover why Cincinnati homeowners and businesses choose Queen City Surface Coatings for military-precision concrete coating installations. Your project starts with a comprehensive, no-obligation consultation.
          </p>
          <div class="hero-ctas">
            <a href="tel:+15132965525" class="btn btn-primary btn-large">
              Call Now: (513) 296-5525
            </a>
            <a href="#quote-form" class="btn btn-outline btn-large">Get Free Quote</a>
          </div>
        </div>
        <div class="hero-stats">
          <div class="stat-card">
            <div class="stat-number">24hr</div>
            <div class="stat-label">Response Time</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">100%</div>
            <div class="stat-label">Satisfaction</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">10+</div>
            <div class="stat-label">Years Experience</div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Contact Methods Section -->
  <Container>
    <section class="contact-methods-section">
      <div class="section-header">
        <h2>Three Ways to Get Started</h2>
        <p>Choose the contact method that works best for you:</p>
      </div>
      
      <div class="contact-methods-grid">
        <div class="contact-method-card secondary">
          <h3>Request Online Quote</h3>
          <p>Fill out our detailed form below and receive a comprehensive estimate within 24 hours.</p>
          <div class="method-benefits">
            <span class="benefit">✓ Detailed project assessment</span>
            <span class="benefit">✓ Material recommendations</span>
            <span class="benefit">✓ Timeline and pricing</span>
          </div>
          <a href="#quote-form" class="method-cta btn btn-outline">Get Free Quote</a>
        </div>

        <div class="contact-method-card priority">
          <h3>Call for Immediate Service</h3>
          <div class="phone-display">
            <a href="tel:+15132965525" class="phone-number">(513) 296-5525</a>
          </div>
          <p>Speak directly with our team for immediate scheduling, emergency service, or detailed project discussions.</p>
          <div class="method-benefits">
            <span class="benefit">✓ Immediate response</span>
            <span class="benefit">✓ On-the-spot scheduling</span>
            <span class="benefit">✓ Expert consultation</span>
          </div>
          <a href="tel:+15132965525" class="method-cta btn btn-primary">Call Now</a>
        </div>

        <div class="contact-method-card secondary">
          <h3>Email Consultation</h3>
          <div class="email-display">
            <div class="email-container">
              <span class="email-label">Email:</span>
              <a href="mailto:john@queencitysurfacecoatings.com" class="email-address">john@queencitysurfacecoatings.com</a>
            </div>
          </div>
          <p>Send project details, photos, or questions directly to our team for detailed written responses.</p>
          <div class="method-benefits">
            <span class="benefit">✓ Detailed written quotes</span>
            <span class="benefit">✓ Photo project assessment</span>
            <span class="benefit">✓ Technical consultations</span>
          </div>
          <a href="mailto:john@queencitysurfacecoatings.com" class="method-cta btn btn-outline">Send Email</a>
        </div>
      </div>
    </section>
  </Container>

  <!-- Quote Form Section -->
  <section class="quote-form-section" id="quote-form">
    <Container>
      <div class="form-content">
        <div class="form-header">
          <h2>Request Your Free Estimate</h2>
          <p>Provide us with your project details and we'll create a comprehensive quote tailored to your specific needs. All estimates are completely free with no obligation.</p>
        </div>
        
        <div class="form-container">
          <QuoteRequestForm />
        </div>
      </div>
    </Container>
  </section>

  <!-- Service Area & Availability -->
  <Container>
    <section class="service-info-section">
      <div class="service-info-grid">
        <div class="info-card">
          <h3>Service Area</h3>
          <p>We proudly serve the entire Cincinnati tri-state area:</p>
          <ul class="service-areas">
            <li>Cincinnati, Ohio</li>
            <li>Northern Kentucky</li>
            <li>Southeast Indiana</li>
            <li>Hamilton County</li>
            <li>Clermont County</li>
            <li>Warren County</li>
          </ul>
        </div>
        
        <div class="info-card">
          <h3>Business Hours</h3>
          <div class="hours-grid">
            <div class="day-hours">
              <span class="day">Monday - Friday:</span>
              <span class="hours">7:00 AM - 6:00 PM</span>
            </div>
            <div class="day-hours">
              <span class="day">Saturday:</span>
              <span class="hours">8:00 AM - 4:00 PM</span>
            </div>
            <div class="day-hours">
              <span class="day">Sunday:</span>
              <span class="hours">Emergency Service Only</span>
            </div>
          </div>
          <p class="emergency-note">Emergency consultations available 24/7</p>
        </div>
        
        <div class="info-card">
          <h3>What to Expect</h3>
          <ul class="expectations-list">
            <li>Free, no-obligation consultation</li>
            <li>Detailed written estimate</li>
            <li>Material and color recommendations</li>
            <li>Clear project timeline</li>
            <li>Transparent pricing</li>
            <li>Licensed, bonded, and insured</li>
          </ul>
        </div>
      </div>
    </section>
  </Container>

  <!-- Final CTA Section -->
  <section class="final-cta-section">
    <Container>
      <div class="final-cta-content">
        <h2>Ready to Transform Your Concrete?</h2>
        <p>Join hundreds of satisfied customers who've chosen Queen City Surface Coatings for their concrete coating needs. Every project is backed by our military-precision installation and 100% satisfaction guarantee.</p>
        <div class="final-cta-buttons">
          <a href="tel:+15132965525" class="btn btn-primary btn-large">
            Call (513) 296-5525
          </a>
          <a href="#quote-form" class="btn btn-outline btn-large">Get Free Quote</a>
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
/* Hero Section */
.hero-section {
  background: linear-gradient(135deg, var(--theme-surface-2) 0%, var(--theme-navy-dark) 100%);
  color: var(--theme-on-surface-2);
  padding: 4rem 0;
  margin-bottom: 3rem;
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 80%, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(255, 193, 7, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.hero-content {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 4rem;
  align-items: center;
  min-height: 500px;
  position: relative;
  z-index: 1;
}

.hero-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-tagline {
  font-family: var(--theme-font-family-headings);
  font-size: 1.375rem;
  font-weight: var(--font-weight-medium);
  color: #FFC107;
  margin-bottom: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  opacity: 0.95;
}

.hero-headline {
  font-family: var(--theme-font-family-headings);
  font-size: var(--font-size-h1);
  font-weight: var(--font-weight-bold);
  margin-bottom: 1rem;
  line-height: var(--line-height-tight);
  color: #FFC107;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.hero-subheadline {
  font-size: 1.25rem;
  margin-bottom: 2.5rem;
  opacity: 0.95;
  line-height: var(--line-height-relaxed);
  color: rgba(255, 255, 255, 0.9);
}

.hero-ctas {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
}

.hero-section .btn-primary {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #000 !important;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.hero-section .btn-primary:hover {
  background: #E6AC00 !important;
  border-color: #E6AC00 !important;
  color: #000 !important;
}

.hero-section .btn-outline {
  background: transparent !important;
  border-color: #FFC107 !important;
  color: #FFC107 !important;
}

.hero-section .btn-outline:hover {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #000 !important;
}

.btn-icon {
  font-size: 1.2rem;
}

.hero-stats {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
}

.stat-card {
  background: rgba(255, 255, 255, 0.1);
  padding: 2rem;
  border-radius: var(--theme-card-radius);
  text-align: center;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 193, 7, 0.2);
}

.stat-number {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  color: #FFC107;
  margin-bottom: 0.5rem;
}

.stat-label {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Contact Methods Section */
.contact-methods-section {
  padding: 4rem 0;
}

.section-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-header h2 {
  color: var(--theme-primary);
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.section-header p {
  font-size: 1.1rem;
  opacity: 0.8;
  max-width: 600px;
  margin: 0 auto;
}

.contact-methods-grid {
  display: grid;
  grid-template-columns: 1fr 1.5fr 1fr;
  gap: 2rem;
  align-items: start;
}

.contact-method-card {
  background: var(--theme-surface-1);
  border-radius: var(--theme-card-radius);
  padding: 2.5rem;
  text-align: center;
  border: 2px solid transparent;
  transition: all var(--theme-transition);
  position: relative;
}

.contact-method-card.priority {
  border-color: var(--theme-primary);
  transform: scale(1.1);
  box-shadow: 0 12px 32px rgba(255, 193, 7, 0.3);
  padding: 3rem;
}

.contact-method-card.secondary {
  opacity: 0.9;
}

.contact-method-card.priority::before {
  content: 'RECOMMENDED';
  position: absolute;
  top: -12px;
  left: 50%;
  transform: translateX(-50%);
  background: #FFC107;
  color: var(--theme-navy-dark);
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.contact-method-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--theme-shadow-medium);
}


.contact-method-card h3 {
  color: var(--theme-primary);
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
}

.phone-number {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--theme-primary);
  text-decoration: none;
  display: block;
  margin: 1rem 0;
  line-height: 1.3;
}

.email-container {
  background: rgba(255, 193, 7, 0.1);
  border: 2px solid var(--theme-primary);
  border-radius: 8px;
  padding: 1rem;
  margin: 1rem 0;
  text-align: center;
}

.email-label {
  display: block;
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--theme-primary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 0.5rem;
  opacity: 0.8;
}

.email-address {
  font-size: 0.95rem;
  font-weight: 700;
  color: var(--theme-primary);
  text-decoration: none;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

.phone-number:hover, .email-address:hover {
  text-decoration: underline;
}

.contact-method-card > p {
  margin-bottom: 1.5rem;
  line-height: 1.6;
  opacity: 0.8;
}

.method-benefits {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 2rem;
}

.benefit {
  font-size: 0.9rem;
  color: var(--theme-primary);
  opacity: 0.9;
}

.method-cta {
  width: 100%;
}

/* Quote Form Section */
.quote-form-section {
  background: var(--theme-surface-1);
  padding: 4rem 0;
  margin: 4rem 0;
}

.form-header {
  text-align: center;
  margin-bottom: 3rem;
}

.form-header h2 {
  color: var(--theme-primary);
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.form-header p {
  font-size: 1.1rem;
  opacity: 0.8;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
}

.form-container {
  max-width: 800px;
  margin: 0 auto;
}

/* Service Info Section */
.service-info-section {
  padding: 4rem 0;
}

.service-info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.info-card {
  background: var(--theme-surface-1);
  border-radius: var(--theme-card-radius);
  padding: 2rem;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.info-card h3 {
  color: var(--theme-primary);
  margin-bottom: 1.5rem;
  font-size: 1.3rem;
  text-align: center;
}

.service-areas, .expectations-list {
  list-style: none;
  padding: 0;
}

.service-areas {
  text-align: center;
}

.service-areas li, .expectations-list li {
  padding: 0.5rem 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.service-areas li:last-child, .expectations-list li:last-child {
  border-bottom: none;
}

.expectations-list li::before {
  content: "✓";
  color: var(--theme-primary);
  font-weight: bold;
  margin-right: 0.5rem;
}

.hours-grid {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.day-hours {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.day {
  font-weight: 600;
}

.hours {
  color: var(--theme-primary);
}

.emergency-note {
  font-size: 0.9rem;
  color: var(--theme-primary);
  font-weight: 600;
  margin-top: 1rem;
}

/* Final CTA Section */
.final-cta-section {
  background: var(--theme-navy-dark);
  color: #fff;
  padding: 4rem 0;
  text-align: center;
}

.final-cta-content h2 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  color: #FFC107;
  font-weight: 700;
}

.final-cta-content p {
  font-size: 1.1rem;
  margin-bottom: 2.5rem;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
}

.final-cta-buttons {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
}

.final-cta-section .btn-primary {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #000 !important;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 600;
}

.final-cta-section .btn-primary:hover {
  background: #E6AC00 !important;
  border-color: #E6AC00 !important;
  color: #000 !important;
}

.final-cta-section .btn-outline {
  background: transparent !important;
  border-color: #FFC107 !important;
  color: #FFC107 !important;
  font-weight: 600;
}

.final-cta-section .btn-outline:hover {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #000 !important;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }
  
  .contact-method-card.priority {
    transform: none;
  }
  
  .contact-methods-grid {
    grid-template-columns: 1fr;
  }
  
  .contact-method-card.priority {
    transform: none;
    padding: 2.5rem;
  }
  
  .service-info-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 0;
  }
  
  .hero-headline {
    font-size: 2rem;
  }
  
  .section-header h2, .form-header h2, .final-cta-content h2 {
    font-size: 2rem;
  }
  
  .hero-ctas, .final-cta-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .contact-method-card {
    padding: 2rem;
  }
  
  .stat-card {
    padding: 1.5rem;
  }
  
  .stat-number {
    font-size: 2rem;
  }
}

@media (max-width: 480px) {
  .contact-method-card, .info-card {
    padding: 1.5rem;
  }
  
  .hero-content, .form-container {
    padding: 0 1rem;
  }
}
</style>