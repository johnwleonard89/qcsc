	.service-card:hover {
		transform: translateY(-8px);
		box-shadow: var(--theme-shadow-medium);
		border-color: rgba(255, 193, 7, 0.3);
	}

	.service-card::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--theme-primary), var(--theme-primary-hover));
		transform: scaleX(0);
		transition: transform 0.3s ease;
		border-radius: 0 0 var(--theme-card-radius) var(--theme-card-radius);
	}

	.service-card:hover::after {
		transform: scaleX(1);
	}

	.service-image {
		height: 220px;
		overflow: hidden;
		position: relative;
	}

	.service-image::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to bottom, transparent 0%, rgba(0, 47, 75, 0.1) 100%);
		z-index: 1;
	}

	.service-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		filter: contrast(1.05) saturate(1.05);
