	.contact-section {
		background: var(--theme-surface-1);
		padding: 4rem 0;
	}
	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: start;
	}
	.contact-info h2 {
		font-size: 2.5rem;
