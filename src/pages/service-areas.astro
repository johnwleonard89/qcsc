	}

	.county-content h2 {
		color: #002F4B;
	}

	.county-grid {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 2rem;
		margin: 2rem 0;
	}

	.county-card {
		background: white;
		padding: 2rem;
		border-radius: var(--theme-shape-radius);
		border: 2px solid #E9ECEF;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: var(--theme-transition);
