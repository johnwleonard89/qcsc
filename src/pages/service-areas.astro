	{
		city: "East Side Communities",
		counties: ["Hamilton County", "Clermont County"],
		neighborhoods: ["Anderson", "Forest Park", "Springdale", "Sharonville", "Blue Ash"],
		description: "Expert epoxy and polishing services for east side Cincinnati."
	},
	{
		city: "Butler County",
		counties: ["Butler County"], 
		neighborhoods: ["Hamilton", "Fairfield", "Middletown", "West Chester", "Mason"],
		description: "Comprehensive surface restoration throughout Butler County."
