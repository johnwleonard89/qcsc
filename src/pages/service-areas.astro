<style>
	/* Import service areas styles and center all content */
	@import '/src/styles/service-areas.css';

	/* Center all text by default */
	section {
		text-align: center;
	}

	/* Consistent Typography Hierarchy */
	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1rem;
		font-family: var(--theme-font-family-serif);
	}

	h2 {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1.5rem;
		font-family: var(--theme-font-family-serif);
	}

	h3 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-weight: 700;
		line-height: 1.3;
		margin-bottom: 1rem;
		font-family: var(--theme-font-family-serif);
	}

	h4 {
		font-size: 1.25rem;
		font-weight: 700;
		line-height: 1.3;
		margin-bottom: 0.75rem;
		font-family: var(--theme-font-family-serif);
	}

	/* Custom Hero Section - Fixed visibility and prominent CTAs */
	.custom-hero {
		background: linear-gradient(135deg, #002F4B 0%, #001A2E 100%);
		color: white;
		padding: 4rem 0;
		margin-bottom: 2rem;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.custom-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: radial-gradient(circle at 20% 80%, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
						  radial-gradient(circle at 80% 20%, rgba(255, 193, 7, 0.05) 0%, transparent 50%);
		pointer-events: none;
	}

	.custom-hero-content {
		max-width: 800px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.custom-hero h1 {
		color: #FFC107;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
	}

	.custom-hero-subtitle {
		color: rgba(255, 255, 255, 0.95);
		font-size: 1.25rem;
		margin-bottom: 2.5rem;
		line-height: 1.6;
		font-weight: 400;
	}

	.custom-hero-features {
		display: flex;
		flex-wrap: nowrap;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 4rem;
		overflow-x: auto;
		padding: 0 1rem;
	}

	.feature-badge {
		background: transparent;
		color: white;
		padding: 0.75rem 1.25rem;
		border-radius: 8px;
		font-weight: 600;
		font-size: 0.9rem;
		border: 2px solid white;
		transition: all 0.3s ease;
		white-space: nowrap;
		flex: 0 0 auto;
		text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
	}

	.feature-badge:hover {
		background: rgba(255, 255, 255, 0.1);
		transform: translateY(-2px);
		box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
	}

	.custom-hero-cta {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-primary {
		background: linear-gradient(45deg, #FFC107, #FFD700);
		color: #002F4B;
		padding: 1.5rem 3rem;
		border-radius: 50px;
		font-weight: 800;
		font-size: 1.2rem;
		text-decoration: none;
		border: 4px solid #FFC107;
		transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
		box-shadow: 0 15px 35px rgba(255, 193, 7, 0.5), 0 5px 15px rgba(0, 0, 0, 0.2);
		text-transform: uppercase;
		letter-spacing: 1px;
		min-width: 250px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
		animation: pulse-glow 2s ease-in-out infinite alternate;
	}

	@keyframes pulse-glow {
		0% {
			box-shadow: 0 15px 35px rgba(255, 193, 7, 0.5), 0 5px 15px rgba(0, 0, 0, 0.2);
		}
		100% {
			box-shadow: 0 15px 35px rgba(255, 193, 7, 0.7), 0 5px 15px rgba(0, 0, 0, 0.2), 0 0 30px rgba(255, 193, 7, 0.6);
		}
	}

	.cta-primary::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
		transition: left 0.6s;
	}

	.cta-primary:hover::before {
		left: 100%;
	}

	.cta-primary:hover {
		background: linear-gradient(45deg, #E6AC00, #FFC107);
		border-color: #E6AC00;
		transform: translateY(-5px) scale(1.05);
		box-shadow: 0 20px 50px rgba(255, 193, 7, 0.8), 0 10px 30px rgba(0, 0, 0, 0.3);
		text-decoration: none;
		color: #002F4B;
	}

	.cta-secondary {
		background: transparent;
		color: #FFC107;
		padding: 1.5rem 3rem;
		border-radius: 50px;
		font-weight: 700;
		font-size: 1.1rem;
		text-decoration: none;
		border: 3px solid #FFC107;
		transition: all 0.3s ease;
		min-width: 220px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		box-shadow: 0 5px 15px rgba(255, 193, 7, 0.2);
	}

	.cta-secondary:hover {
		background: rgba(255, 193, 7, 0.1);
		color: #FFC107;
		transform: translateY(-3px);
		box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3);
		text-decoration: none;
		border-color: #FFD700;
	}

	/* Mobile responsive for hero */
	@media (max-width: 768px) {
		.custom-hero {
			padding: 2rem 0;
		}
		
		/* Mobile hero h1 inherits from global h1 styles */
		
		.custom-hero-features {
			flex-wrap: wrap;
			gap: 0.75rem;
			margin-bottom: 3rem;
			justify-content: center;
		}
		
		.feature-badge {
			font-size: 0.8rem;
			padding: 0.6rem 1rem;
			text-align: center;
		}
		
		.custom-hero-cta {
			flex-direction: column;
			align-items: center;
		}
		
		.cta-primary,
		.cta-secondary {
			width: 100%;
			max-width: 300px;
		}
	}

