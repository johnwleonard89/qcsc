---
import BaseHead from '../../../components/head/BaseHead.astro';
import { Header, Footer } from '@components/odyssey-theme';
import ContactForm from '../../../components/forms/ContactForm.astro';
import Logo from '../../../components/Logo.astro';
import { nav } from '../../../config/nav.js';
import { footerLists, footerSocials } from '../../../config/footer.js';
import settings from '../../../config/settings.js';
import '../../../styles/service-areas.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead 
      title="Clermont County Concrete Coating | Home County Advantage"
      description="Professional concrete coating services throughout Clermont County, OH. Home county expertise serving Milford, Batavia, and all county communities with expert epoxy and concrete solutions."
      keywords="Clermont County concrete coating, Clermont County Ohio concrete services, Milford Batavia concrete coating, Little Miami River concrete solutions"
    />
  </head>
  <body>
    <Header navData={nav}>
      <Logo slot="logo" />
    </Header>
    
    <main class="main-content">
      <!-- Hero Section -->
      <section class="hero-section">
        <div class="container">
          <div class="hero-content">
            <h1>Clermont County Concrete Coating Services</h1>
            <p class="hero-subtitle">
              Comprehensive concrete coating solutions throughout Clermont County, Ohio. 
              Our home county advantage delivers local expertise for all communities from Milford to rural townships.
            </p>
            <div class="hero-features">
              <span>Home County Advantage</span>
              <span>Local Business Relationships</span>
              <span>Community Investment</span>
            </div>
            <div class="hero-cta">
              <a href="#contact" class="btn btn-primary">Get Free Estimate</a>
              <a href="tel:513-555-0123" class="btn btn-secondary">Call Now</a>
            </div>
          </div>
        </div>
      </section>

      <!-- County Overview -->
      <section class="county-overview">
        <div class="container">
          <h2>Proudly Serving Our Home County - Clermont County, Ohio</h2>
          <p class="section-intro">
            Queen City Surface Coatings calls Clermont County home, giving us unparalleled knowledge of our 
            local communities, environmental conditions, and business relationships. From the scenic Little Miami 
            River valley to the rolling hills and growing suburban areas, we understand every aspect of this 
            beautiful county and deliver concrete coating solutions with genuine local expertise.
          </p>
          
          <div class="county-stats">
            <div class="stat-item">
              <h3>208,000+</h3>
              <p>Home County Neighbors</p>
            </div>
            <div class="stat-item">
              <h3>25+</h3>
              <p>Local Communities Served</p>
            </div>
            <div class="stat-item">
              <h3>25+</h3>
              <p>Years Home County Experience</p>
            </div>
            <div class="stat-item">
              <h3>1,200+</h3>
              <p>Local Projects Completed</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Cities Served -->
      <section class="cities-served">
        <div class="container">
          <h2>Clermont County Communities We Call Home</h2>
          
          <div class="cities-grid">
            <div class="city-category">
              <h3>Major Cities & Urban Centers</h3>
              <div class="city-links">
                <a href="/service-areas/ohio/milford-concrete-coating/">Milford</a>
                <a href="/service-areas/ohio/batavia-floor-services/">Batavia</a>
                <span>Loveland (Clermont County portion)</span>
                <span>Amelia</span>
                <span>Bethel</span>
                <span>New Richmond</span>
              </div>
            </div>
            
            <div class="city-category">
              <h3>Little Miami River Communities</h3>
              <div class="city-links">
                <span>Milford riverside district</span>
                <span>Terrace Park area</span>
                <span>Mariemont vicinity</span>
                <span>Newtown connections</span>
                <span>Little Miami State Park area</span>
                <span>Trail and recreation communities</span>
              </div>
            </div>
            
            <div class="city-category">
              <h3>Rural & Township Areas</h3>
              <div class="city-links">
                <span>Union Township</span>
                <span>Miami Township</span>
                <span>Batavia Township</span>
                <span>Pierce Township</span>
                <span>Goshen Township</span>
                <span>Ohio River communities</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- County Market Specializations -->
      <section class="market-specializations">
        <div class="container">
          <h2>Clermont County Market Expertise</h2>
          
          <div class="market-grid">
            <div class="market-segment">
              <div class="market-icon"><img src="/assets/images/service-icons/natural.svg" alt="Natural Areas" /></div>
              <h3>Scenic Recreation & Tourism</h3>
              <p>Specialized coatings for Clermont County's recreation industry, supporting Little Miami State Park and scenic river tourism.</p>
              <ul>
                <li>Little Miami State Park facilities and support buildings</li>
                <li>Bike trail rest areas and visitor centers</li>
                <li>Scenic overlook and observation facilities</li>
                <li>Outdoor recreation equipment and storage buildings</li>
                <li>Tourism-related business and service facilities</li>
              </ul>
            </div>
            
            <div class="market-segment">
              <div class="market-icon"><img src="/assets/images/service-icons/industrial.svg" alt="Industrial Services" /></div>
              <h3>Manufacturing & Industrial</h3>
              <p>Durable concrete solutions for Clermont County's diverse industrial sector, from automotive to specialized manufacturing.</p>
              <ul>
                <li>Ford Batavia Transmission Plant support</li>
                <li>Automotive parts and supplier facilities</li>
                <li>Food processing and agricultural operations</li>
                <li>Distribution and logistics centers</li>
                <li>Light industrial and technology facilities</li>
              </ul>
            </div>
            
            <div class="market-segment">
              <div class="market-icon"><img src="/assets/images/service-icons/educational.svg" alt="Educational Facilities" /></div>
              <h3>Educational & Community Services</h3>
              <p>Professional solutions for Clermont County's educational institutions and growing community service needs.</p>
              <ul>
                <li>Clermont Northeastern Local Schools</li>
                <li>Batavia Local School District facilities</li>
                <li>West Clermont Local Schools</li>
                <li>Community centers and recreation facilities</li>
                <li>Library and public service buildings</li>
              </ul>
            </div>
            
            <div class="market-segment">
              <div class="market-icon"><img src="/assets/images/service-icons/residential.svg" alt="Residential Services" /></div>
              <h3>Rural & Suburban Residential</h3>
              <p>Custom concrete coatings for Clermont County's diverse residential markets, from river communities to rural properties.</p>
              <ul>
                <li>Little Miami River valley homes</li>
                <li>Suburban family neighborhoods</li>
                <li>Rural and agricultural residential properties</li>
                <li>Lake and waterfront home communities</li>
                <li>Historic home renovation projects</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Featured County Projects -->
      <section class="featured-projects">
        <div class="container">
          <h2>Signature Clermont County Projects</h2>
          
          <div class="projects-showcase">
            <div class="project-highlight">
              <h4>Little Miami State Park Visitor Facilities</h4>
              <p>
                <strong>Scope:</strong> Comprehensive renovation of visitor facilities throughout the Little Miami 
                State Park system in Clermont County, including visitor centers, rest areas, and maintenance facilities 
                totaling 75,000+ sq ft.
              </p>
              <p>
                <strong>Challenge:</strong> Coordinate installations with park operations and seasonal visitor schedules 
                while meeting state park standards for durability, safety, and environmental compatibility in 
                sensitive natural areas.
              </p>
              <p>
                <strong>Solution:</strong> Environmentally-sensitive coating systems with low-VOC formulations, slip-resistant 
                surfaces for visitor safety, and earth-tone colors that harmonize with natural surroundings, all 
                installed during off-season periods.
              </p>
              <p>
                <strong>Result:</strong> Enhanced visitor experience facilities that serve thousands of annual trail users 
                while meeting state environmental standards and supporting Clermont County's recreation tourism economy.
              </p>
            </div>
            
            <div class="project-highlight">
              <h4>Clermont County Industrial Park</h4>
              <p>
                <strong>Scope:</strong> Multi-phase industrial coating program covering eight manufacturing and distribution 
                facilities in the county industrial park, totaling over 400,000 sq ft of specialized floor applications.
              </p>
              <p>
                <strong>Challenge:</strong> Diverse industrial requirements from automotive parts manufacturing to food 
                processing, each requiring different coating specifications, safety standards, and installation 
                coordination with ongoing operations.
              </p>
              <p>
                <strong>Solution:</strong> Custom-engineered systems for each facility type, including automotive-grade 
                chemical resistance, food-safe compliance systems, and heavy-duty load-bearing formulations with 
                coordinated installation schedules.
              </p>
              <p>
                <strong>Result:</strong> Enhanced manufacturing capabilities county-wide with improved safety, operational 
                efficiency, and regulatory compliance supporting Clermont County's economic development goals.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- County Characteristics -->
      <section class="county-characteristics">
        <div class="container">
          <h2>Clermont County Environmental Considerations</h2>
          
          <div class="characteristics-grid">
            <div class="characteristic">
              <h3>Little Miami River Valley Conditions</h3>
              <p>
                The Little Miami River creates unique environmental challenges throughout eastern Clermont County, 
                requiring specialized moisture management and flood-resistant coating solutions.
              </p>
              <ul>
                <li>River valley humidity and seasonal moisture variations</li>
                <li>Flood plain considerations and water table effects</li>
                <li>Enhanced drainage requirements for valley properties</li>
                <li>Specialized moisture mitigation techniques</li>
              </ul>
            </div>
            
            <div class="characteristic">
              <h3>Rolling Hills & Elevation Changes</h3>
              <p>
                Clermont County's varied topography creates different environmental conditions that affect 
                concrete performance and coating application requirements across elevation zones.
              </p>
              <ul>
                <li>Hilltop drainage and runoff management</li>
                <li>Valley floor moisture considerations</li>
                <li>Slope and grade challenges for application</li>
                <li>Soil composition variations across elevation</li>
              </ul>
            </div>
            
            <div class="characteristic">
              <h3>Rural & Agricultural Environment</h3>
              <p>
                The county's significant agricultural areas and rural properties require specialized approaches 
                for farm buildings, rural residences, and agricultural facility applications.
              </p>
              <ul>
                <li>Agricultural chemical resistance requirements</li>
                <li>Farm building ventilation and moisture control</li>
                <li>Heavy equipment and machinery load considerations</li>
                <li>Food production compliance for processing facilities</li>
              </ul>
            </div>
            
            <div class="characteristic">
              <h3>Historic & Scenic Preservation</h3>
              <p>
                Clermont County's scenic beauty and historic areas require sensitive approaches that preserve 
                community character while providing modern functionality and performance.
              </p>
              <ul>
                <li>Historic building preservation considerations</li>
                <li>Scenic area visual impact minimization</li>
                <li>Community character respect and enhancement</li>
                <li>Environmental sensitivity in natural areas</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Home County Advantages -->
      <section class="service-advantages">
        <div class="container">
          <h2>Our Clermont County Home Advantage</h2>
          
          <div class="advantages-content">
            <div class="advantage-column">
              <h3>Deep Local Knowledge</h3>
              <p>
                As Clermont County residents and business owners, we understand every aspect of our local environment, 
                from specific soil conditions and drainage patterns to community standards and local business relationships 
                that ensure project success.
              </p>
              
              <h3>Community Investment & Responsibility</h3>
              <p>
                Our reputation in Clermont County is built on decades of community involvement and satisfied neighbors. 
                Every project reflects our commitment to our home county and contributes to our local business relationships 
                and community standing.
              </p>
            </div>
            
            <div class="advantage-column">
              <h3>Environmental Expertise</h3>
              <p>
                Years of experience with Clermont County's unique environmental challenges - from Little Miami River 
                valley conditions to rural agricultural requirements - provides unmatched expertise in selecting and 
                applying appropriate coating solutions.
              </p>
              
              <h3>Rapid Response & Accessibility</h3>
              <p>
                Home county location ensures rapid response times, easy accessibility for consultations and follow-up 
                service, and personal attention that comes from serving neighbors and building lasting community 
                relationships.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Customer Success Stories -->
      <section class="testimonials">
        <div class="container">
          <h2>Clermont County Neighbor Success Stories</h2>
          
          <div class="testimonials-grid">
            <div class="testimonial">
              <div class="testimonial-content">
                <p>
                  "Being able to work with our local Clermont County team made all the difference. They understood 
                  our river valley moisture issues and provided solutions that have worked perfectly for five years. 
                  True local expertise you can trust."
                </p>
              </div>
              <div class="testimonial-author">
                <strong>Local Homeowner</strong> - Little Miami River Valley
              </div>
            </div>
            
            <div class="testimonial">
              <div class="testimonial-content">
                <p>
                  "Our manufacturing facility needed specialized coatings for automotive parts production. The local 
                  knowledge of regulations, suppliers, and installation requirements made this project seamless from 
                  start to finish."
                </p>
              </div>
              <div class="testimonial-author">
                <strong>Plant Manager</strong> - Clermont County Industrial Park
              </div>
            </div>
            
            <div class="testimonial">
              <div class="testimonial-content">
                <p>
                  "Working with our local team on park facilities renovation was outstanding. They understood our 
                  environmental requirements and visitor needs, delivering results that enhance our community's 
                  premier recreation resource."
                </p>
              </div>
              <div class="testimonial-author">
                <strong>Park Superintendent</strong> - Little Miami State Park
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="contact-section">
        <div class="container">
          <div class="contact-content">
            <div class="contact-info">
              <h2>Your Clermont County Concrete Coating Neighbors</h2>
              <p>
                Ready to work with your local Clermont County team for professional concrete coating solutions? 
                Contact us for personalized service with genuine home county expertise.
              </p>
              
              <div class="contact-details">
                <div class="contact-item">
                  <strong>Phone:</strong> (513) 555-0123
                </div>
                <div class="contact-item">
                  <strong>Email:</strong> info@queencitysurface.com
                </div>
                <div class="contact-item">
                  <strong>Home Service Area:</strong> All of Clermont County, Ohio
                </div>
                <div class="contact-item">
                  <strong>Business Hours:</strong> Monday-Saturday 7AM-7PM
                </div>
              </div>
              
              <div class="service-promise">
                <h3>Our Clermont County Commitment</h3>
                <ul>
                  <li>Free estimates with genuine local expertise</li>
                  <li>Home county environmental knowledge advantage</li>
                  <li>Licensed and insured Ohio contractors</li>
                  <li>Complete warranty coverage for all projects</li>
                  <li>Clermont County's hometown concrete coating specialists</li>
                  <li>Community investment and local business relationships</li>
                </ul>
              </div>
            </div>
            
            <div class="contact-form">
              <ContactForm />
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <Footer 
      footerLists={footerLists}
      footerSocials={footerSocials}
      copyrightName={settings.name}
    >
      <Logo slot="logo" />
    </Footer>
    
