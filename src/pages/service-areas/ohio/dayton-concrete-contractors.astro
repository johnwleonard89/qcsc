      <!-- Service Areas -->
      <section class="service-areas">
        <div class="container">
          <h2>Complete Montgomery County Coverage</h2>
          
          <div class="areas-content">
            <div class="areas-column">
              <h3>Primary Service Areas</h3>
              <p>
