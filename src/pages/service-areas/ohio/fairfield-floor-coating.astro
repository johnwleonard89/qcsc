---
import BaseHead from '../../../components/head/BaseHead.astro';
import { Header, Footer } from '@components/odyssey-theme';
import ContactForm from '../../../components/forms/ContactForm.astro';
import Logo from '../../../components/Logo.astro';
import { nav } from '../../../config/nav.js';
import { footerLists, footerSocials } from '../../../config/footer.js';
import settings from '../../../config/settings.js';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead 
      title="Fairfield Floor Coating | Expert Epoxy & Concrete Services"
      description="Professional floor coating services in Fairfield, OH. Specializing in epoxy, polyaspartic, and concrete coatings for residential and commercial properties. 15+ years experience serving Butler County."
      keywords="Fairfield floor coating, Fairfield epoxy flooring, Fairfield concrete coating, Butler County floor coating, garage floor coating Fairfield"
    />
  </head>
  <body>
    <Header navData={nav}>
      <Logo slot="logo" />
    </Header>
    
    <main class="main-content">
      <!-- Hero Section -->
      <section class="hero-section">
        <div class="container">
          <div class="hero-content">
            <h1>Professional Floor Coating Services in Fairfield, Ohio</h1>
            <p class="hero-subtitle">
              Transform your floors with premium epoxy and polyaspartic coatings. 
              Serving Fairfield and Butler County with 15+ years of expertise.
            </p>
            <div class="hero-features">
