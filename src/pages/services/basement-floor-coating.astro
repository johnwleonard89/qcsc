---
import { Container, CtaCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Basement Floor Coating | Moisture-Resistant Concrete Coating Cincinnati | Queen City Surface Coatings',
	description: 'Professional basement floor coating in Cincinnati. Moisture-resistant coatings that transform basements into bright, functional living spaces. Military precision installation.',
	keywords: 'basement floor coating Cincinnati, moisture resistant flooring, basement waterproofing, concrete sealer, basement renovation Ohio',
	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: 'Basement Floor Coating', url: 'https://queencitysurfacecoatings.com/services/basement-floor-coating/' }
	],
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Basement Floor Coating",
		"description": "Moisture-resistant basement floor coating systems that prevent mold and create functional living spaces",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings LLC",
			"url": "https://queencitysurfacecoatings.com",
			"telephone": "+1-513-296-5525",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Milford",
				"addressRegion": "OH",
				"postalCode": "45150",
				"addressCountry": "US"
			}
		},
		"areaServed": [
			{
				"@type": "GeoCircle",
				"geoMidpoint": {
					"@type": "GeoCoordinates",
					"latitude": "39.1756",
					"longitude": "-84.2930"
				},
				"geoRadius": "50 miles"
			},
			{"@type": "State", "name": "Ohio"},
			{"@type": "State", "name": "Kentucky"},
			{"@type": "State", "name": "Indiana"}
		],
		"offers": {
			"@type": "Offer",
			"name": "Basement Floor Coating Installation",
			"description": "Professional moisture-resistant basement coating with mold prevention",
			"priceCurrency": "USD",
			"availability": "https://schema.org/InStock",
			"validThrough": "2025-12-31",
			"seller": {
				"@type": "LocalBusiness",
				"name": "Queen City Surface Coatings LLC"
			}
		},
		"serviceType": "Basement Waterproofing",
		"category": "Construction Services",
		"aggregateRating": {
			"@type": "AggregateRating",
			"ratingValue": "5.0",
			"reviewCount": "3",
			"bestRating": "5",
			"worstRating": "5"
		}
	}
};
---

<Layout {seo}>
	<!-- Page Header -->
	<Container>
		<section class="page-header">
			<nav class="breadcrumb" aria-label="Breadcrumb">
				<ol>
					<li><a href="/">Home</a></li>
					<li><a href="/services">Services</a></li>
					<li aria-current="page">Basement Floor Coating</li>
				</ol>
			</nav>
			<h1>Basement Floor Coating</h1>
			<p class="page-subtitle">
				Moisture-resistant coatings that transform dark, dreary basements into bright, functional living spaces
			</p>
		</section>
	</Container>

	<!-- Service Hero Section -->
	<Container>
		<section class="service-hero">
			<div class="hero-content">
				<div class="hero-text">
					<h2>Transform Your Basement Into Usable Space</h2>
					<p>
						Don't let moisture and ugly concrete floors limit your basement's potential. Our 
						specialized moisture-resistant coating systems brighten dark spaces while creating 
						a moisture vapor barrier that prevents mold and mildew. With military precision 
						installation, we turn neglected basements into valuable living areas.
					</p>
					<div class="key-benefits">
						<div class="benefit-item">
							<span class="benefit-icon">üíß</span>
							<span>Moisture Vapor Barrier</span>
						</div>
						<div class="benefit-item">
							<span class="benefit-icon">ü¶†</span>
							<span>Mold & Mildew Resistant</span>
						</div>
						<div class="benefit-item">
							<span class="benefit-icon">üí°</span>
							<span>Brightens Dark Spaces</span>
						</div>
						<div class="benefit-item">
							<span class="benefit-icon">üè†</span>
							<span>Creates Usable Living Area</span>
						</div>
					</div>
					<div class="hero-cta">
						<a href="/company/contact" class="btn btn-primary">Get Basement Quote</a>
						<a href="tel:+15132965525" class="btn btn-outline">Call (513) 296-5525</a>
					</div>
				</div>
				<div class="hero-image">
					<img src="/assets/images/services/basement-coating-hero.webp" alt="Transformed basement with professional moisture-resistant floor coating" loading="eager" />
				</div>
			</div>
		</section>
	</Container>

	<!-- Benefits Section -->
	<Container>
		<section class="benefits-section">
			<h2>Basement Floor Coating Benefits</h2>
			<div class="benefits-grid">
				<div class="benefit-card">
					<div class="benefit-icon">üíß</div>
					<h3>Moisture Protection</h3>
					<p>Creates a vapor barrier that prevents moisture from seeping through concrete, protecting against mold and mildew growth.</p>
				</div>
				<div class="benefit-card">
					<div class="benefit-icon">üè†</div>
					<h3>Usable Living Space</h3>
					<p>Transform dark, musty basements into bright, comfortable living areas perfect for recreation rooms, home gyms, or storage.</p>
				</div>
				<div class="benefit-card">
					<div class="benefit-icon">üí°</div>
					<h3>Enhanced Lighting</h3>
					<p>Light-colored coatings reflect more light, making basement spaces brighter and more welcoming.</p>
				</div>
				<div class="benefit-card">
					<div class="benefit-icon">üõ°Ô∏è</div>
					<h3>Easy Maintenance</h3>
					<p>Sealed surfaces are easy to clean and maintain, resisting stains and requiring only basic cleaning.</p>
				</div>
			</div>
		</section>
	</Container>

	<!-- Process Section -->
	<Container>
		<section class="process-section">
			<h2>Our Basement Coating Process</h2>
			<div class="process-steps">
				<div class="process-step">
					<div class="step-number">1</div>
					<div class="step-content">
						<h3>Moisture Assessment</h3>
						<p>We thoroughly test for moisture levels and identify any water infiltration issues that need to be addressed before coating.</p>
					</div>
				</div>
				<div class="process-step">
					<div class="step-number">2</div>
					<div class="step-content">
						<h3>Surface Preparation</h3>
						<p>Concrete surfaces are cleaned, repaired, and properly prepared to ensure maximum adhesion of the coating system.</p>
					</div>
				</div>
				<div class="process-step">
					<div class="step-number">3</div>
					<div class="step-content">
						<h3>Moisture Barrier Application</h3>
						<p>We apply a specialized moisture-resistant primer that creates an effective vapor barrier.</p>
					</div>
				</div>
				<div class="process-step">
					<div class="step-number">4</div>
					<div class="step-content">
						<h3>Finish Coating</h3>
						<p>The final coating is applied, creating a durable, attractive surface that's ready for immediate use.</p>
					</div>
				</div>
			</div>
		</section>
	</Container>

	<!-- Final Call to Action -->
	<CtaCardSection background="var(--theme-surface-2)" color="var(--theme-on-surface-2)">
		<h2>Ready to Reclaim Your Basement?</h2>
		<p>
			Transform your basement from storage space to living space. Contact Queen City Surface Coatings 
			for your basement floor coating consultation and moisture-resistant flooring estimate.
		</p>
		<div class="cta-buttons">
			<a href="/company/contact" class="btn btn-primary">Schedule Basement Consultation</a>
			<a href="tel:+15132965525" class="btn btn-outline">(513) 296-5525</a>
		</div>
	</CtaCardSection>
</Layout>

<style>
	/* Page Header */
	.page-header {
		text-align: center;
		padding: 2rem 0 3rem 0;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		margin-bottom: 3rem;
	}

	.breadcrumb {
		margin-bottom: 1.5rem;
	}

	.breadcrumb ol {
		display: flex;
		justify-content: center;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
		font-size: 0.9rem;
	}

	.breadcrumb li:not(:last-child)::after {
		content: ">";
		margin-left: 0.5rem;
		opacity: 0.6;
	}

	.breadcrumb a {
		color: var(--theme-primary);
		text-decoration: none;
	}

	.breadcrumb a:hover {
		text-decoration: underline;
	}

	.page-header h1 {
		font-size: 3rem;
		color: var(--theme-on-bg);
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: var(--theme-on-bg);
		opacity: 0.8;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.5;
	}

	/* Service Hero */
	.service-hero {
		margin: 4rem 0;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
	}

	.hero-text h2 {
		color: var(--theme-primary);
		font-size: 2rem;
		margin-bottom: 1.5rem;
	}

	.hero-text p {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	.key-benefits {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.benefit-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 500;
	}

	.benefit-icon {
		font-size: 1.2rem;
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	/* CTA Buttons */
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
		flex-wrap: wrap;
	}

	.btn {
		padding: 1rem 2rem;
		border-radius: var(--theme-button-border-radius);
		text-decoration: none;
		font-weight: 600;
		transition: all var(--theme-transition);
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border: 2px solid transparent;
		min-height: 44px;
	}

	.btn-primary {
		background: var(--theme-primary);
		color: var(--theme-on-primary);
		border-color: var(--theme-primary);
	}

	.btn-primary:hover {
		background: var(--theme-primary-hover);
		border-color: var(--theme-primary-hover);
		transform: translateY(-2px);
	}

	.btn-outline {
		background: transparent;
		color: var(--theme-primary);
		border-color: var(--theme-primary);
	}

	.btn-outline:hover {
		background: var(--theme-primary);
		color: var(--theme-on-primary);
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}
		
		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
		}
		
		.key-benefits {
			grid-template-columns: 1fr;
		}
		
		.hero-cta {
			justify-content: center;
		}
		
		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
	/* Benefits Section */
	.benefits-section {
		padding: 4rem 0;
		text-align: center;
	}

	.benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin: 2rem 0;
	}

	.benefit-card {
		background: var(--theme-bg);
		padding: 2rem;
		border-radius: var(--theme-shape-radius);
		border: 2px solid var(--theme-surface-1);
		transition: var(--theme-transition);
		text-align: center;
	}

	.benefit-card:hover {
		border-color: var(--theme-primary);
		transform: translateY(-2px);
		box-shadow: var(--theme-shadow-medium);
	}

	.benefit-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.benefit-card h3 {
		color: var(--theme-text-primary);
		margin-bottom: 1rem;
	}

	/* Process Section */
	.process-section {
		background: var(--theme-surface-1);
		padding: 4rem 2rem;
		margin: 2rem 0;
		border-radius: var(--theme-shape-radius);
	}

	.process-steps {
		display: grid;
		gap: 2rem;
		margin: 2rem 0;
	}

	.process-step {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 2rem;
		background: var(--theme-bg);
		padding: 2rem;
		border-radius: var(--theme-shape-radius);
		border: 2px solid transparent;
		transition: var(--theme-transition);
	}

	.process-step:hover {
		border-color: var(--theme-primary);
		transform: translateY(-2px);
	}

	.step-number {
		background: var(--theme-primary);
		color: var(--theme-on-primary);
		width: 4rem;
		height: 4rem;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		font-weight: 700;
		flex-shrink: 0;
	}

	.step-content h3 {
		color: var(--theme-text-primary);
		margin-bottom: 1rem;
	}

	/* Mobile Responsiveness */
	@media (max-width: 768px) {
		.hero-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		.benefits-grid {
			grid-template-columns: 1fr;
		}
		
		.process-step {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 1rem;
		}
	}
</style>