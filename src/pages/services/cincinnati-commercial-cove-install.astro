---
import CitySpecificServiceTemplate from '../../templates/CitySpecificServiceTemplate.astro';
import { servicesConfig } from '../../data/servicesData.js';

const service = servicesConfig.commercial.services.find(s => s.title === "Cove Install");

const cityData = {
  cityName: 'Cincinnati',
  state: 'Ohio', 
  county: 'Hamilton',
  service: service,
  seo: {
    title: 'Cincinnati Commercial Cove Install | Professional Floor-to-Wall Transitions | Queen City Surface Coatings',
    description: 'Professional commercial cove base installation in Cincinnati, Ohio. Seamless floor-to-wall transitions for enhanced cleanability and professional appearance.',
    keywords: 'Cincinnati commercial cove install, floor-to-wall transition, commercial flooring, seamless cove base, Cincinnati concrete services'
  },
  serviceArea: {
    description: 'Queen City Surface Coatings provides professional commercial cove installation services throughout Cincinnati, Ohio.',
    neighborhoods: [
      'Hyde Park', 'Clifton', 'Mount Adams', 'Oakley', 'East Walnut Hills',
      'Walnut Hills', 'Columbia-Tusculum', 'Pleasant Ridge', 'Madisonville',
      'Over-the-Rhine', 'Downtown', 'West End', 'Price Hill', 'Westwood', 'Northside'
    ]
  }
};
---

<CitySpecificServiceTemplate 
  cityName={cityData.cityName}
  state={cityData.state}
  county={cityData.county}
  service={cityData.service}
  seo={cityData.seo}
  serviceArea={cityData.serviceArea}
/>