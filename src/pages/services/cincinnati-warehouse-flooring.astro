  cityName: 'Cincinnati',
  state: 'Ohio',
  county: 'Hamilton',
  service: warehouseService,
  seo: {
    title: 'Cincinnati Warehouse Flooring | Industrial Heavy-Duty Coatings | Queen City Surface Coatings',
    description: 'Professional warehouse flooring solutions in Cincinnati, Ohio. Heavy-duty coatings for industrial facilities in Queensgate, Camp Washington, and all Cincinnati areas.',
    keywords: 'Cincinnati warehouse flooring, Cincinnati industrial flooring, Queensgate warehouse coating, Camp Washington industrial floors, Cincinnati heavy-duty flooring, warehouse epoxy Cincinnati'
  },
  serviceArea: {
    description: 'Queen City Surface Coatings delivers professional warehouse flooring solutions throughout Cincinnati, Ohio. Our heavy-duty coatings are engineered for Cincinnati\'s industrial facilities and distribution centers.',
    neighborhoods: [
      'Queensgate',
      'Camp Washington',
      'West End',
