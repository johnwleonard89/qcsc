      'East Price Hill',
      'South Cumminsville',
      'Riverside',
      'Sedamsville',
      'East Westwood',
      'Millvale',
      'Carthage',
      'Hartwell',
      'Bond Hill',
      'Roselawn',
      'Avondale',
      'Corryville',
      'Downtown',
      'Over-the-Rhine',
      'Pendleton',
      'Mount Auburn'
