      'Port of Cincinnati',
      'Cincinnati Union Terminal',
      'Queensgate Industrial District',
      'Camp Washington Business District',
      'Cincinnati Logistics Hub',
      'Interstate 75 Corridor',
      'Interstate 71 Corridor',
