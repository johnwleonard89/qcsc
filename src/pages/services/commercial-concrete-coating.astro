	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"serviceType": "Commercial Concrete Coating",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings",
			"url": "https://queencitysurfacecoatings.com",
			"telephone": "(513) 732-3276",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Cincinnati",
				"addressRegion": "OH",
				"addressCountry": "US"
			}
		},
		"areaServed": ["Cincinnati", "Ohio", "Kentucky", "Hamilton County", "Clermont County", "Warren County", "Butler County"],
