		"@context": "https://schema.org",
		"@type": "Service",
		"serviceType": "Commercial Concrete Coating",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings",
			"url": "https://queencitysurfacecoatings.com",
			"telephone": "(513) 732-3276",
