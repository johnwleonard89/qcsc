---
import { Container, CtaCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Commercial Concrete Coating | Industrial Flooring Cincinnati | Queen City Surface Coatings',
	description: 'Heavy-duty commercial concrete coating for warehouses, retail, restaurants & manufacturing. Military precision installation. Licensed & insured in Cincinnati tri-state.',
	keywords: 'commercial concrete coating Cincinnati, industrial flooring, warehouse floor coating, restaurant flooring, manufacturing floor coating Ohio',
	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: 'Commercial Concrete Coating', url: 'https://queencitysurfacecoatings.com/services/commercial-concrete-coating/' }
	],
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Commercial Concrete Coating",
		"description": "Heavy-duty commercial concrete coating systems for warehouses, manufacturing, retail and restaurant applications",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings LLC"
		},
		"areaServed": {
			"@type": "State",
			"name": "Ohio"
		},
		"offers": {
			"@type": "Offer",
			"priceCurrency": "USD",
			"availability": "https://schema.org/InStock"
		},
		"serviceType": "Industrial Flooring",
		"category": "Construction Services"
	}
};
---

<Layout {seo}>
	<!-- Page Header -->
	<Container>
		<section class="page-header">
			<nav class="breadcrumb" aria-label="Breadcrumb">
				<ol>
					<li><a href="/">Home</a></li>
					<li><a href="/services">Services</a></li>
					<li aria-current="page">Commercial Concrete Coating</li>
				</ol>
			</nav>
			<h1>Commercial Concrete Coating</h1>
			<p class="page-subtitle">
				Heavy-duty coating systems engineered for high-traffic commercial and industrial environments with minimal downtime installation
			</p>
		</section>
	</Container>

	<!-- Service Hero Section -->
	<Container>
		<section class="service-hero">
			<div class="hero-content">
				<div class="hero-text">
					<h2>Industrial-Strength Flooring Solutions</h2>
					<p>
						From warehouses to restaurants, our commercial coating systems are engineered 
						to withstand the demanding conditions of business environments. With military 
						precision installation and minimal downtime, we keep your operations running 
						while delivering floors that perform for decades.
					</p>
					<div class="key-benefits">
						<div class="benefit-item">
							<span class="benefit-icon">üè≠</span>
							<span>Heavy Equipment Rated</span>
						</div>
						<div class="benefit-item">
							<span class="benefit-icon">‚ö°</span>
							<span>Minimal Downtime Installation</span>
						</div>
						<div class="benefit-item">
							<span class="benefit-icon">üß™</span>
							<span>Chemical & Abrasion Resistant</span>
						</div>
						<div class="benefit-item">
							<span class="benefit-icon">üí°</span>
							<span>Improves Lighting Efficiency</span>
						</div>
					</div>
					<div class="hero-cta">
						<a href="/company/contact" class="btn btn-primary">Get Commercial Quote</a>
						<a href="tel:+15132965525" class="btn btn-outline">Call (513) 296-5525</a>
					</div>
				</div>
				<div class="hero-image">
					<img src="/assets/images/services/commercial-coating-hero.webp" alt="Commercial concrete coating installation in warehouse" loading="eager" />
				</div>
			</div>
		</section>
	</Container>

	<!-- Content sections would continue here -->
	<!-- This is the basic structure template that will be expanded -->

	<!-- Final Call to Action -->
	<CtaCardSection background="var(--theme-surface-2)" color="var(--theme-on-surface-2)">
		<h2>Ready for Industrial-Grade Flooring?</h2>
		<p>
			Get commercial coating solutions that perform under pressure. Contact Queen City Surface Coatings 
			for your free commercial flooring consultation and project estimate.
		</p>
		<div class="cta-buttons">
			<a href="/company/contact" class="btn btn-primary">Schedule Commercial Consultation</a>
			<a href="tel:+15132965525" class="btn btn-outline">(513) 296-5525</a>
		</div>
	</CtaCardSection>
</Layout>

<style>
	/* Page Header */
	.page-header {
		text-align: center;
		padding: 2rem 0 3rem 0;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		margin-bottom: 3rem;
	}

	.breadcrumb {
		margin-bottom: 1.5rem;
	}

	.breadcrumb ol {
		display: flex;
		justify-content: center;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
		font-size: 0.9rem;
	}

	.breadcrumb li:not(:last-child)::after {
		content: ">";
		margin-left: 0.5rem;
		opacity: 0.6;
	}

	.breadcrumb a {
		color: var(--theme-primary);
		text-decoration: none;
	}

	.breadcrumb a:hover {
		text-decoration: underline;
	}

	.page-header h1 {
		font-size: 3rem;
		color: var(--theme-on-bg);
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: var(--theme-on-bg);
		opacity: 0.8;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.5;
	}

	/* Service Hero */
	.service-hero {
		margin: 4rem 0;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
	}

	.hero-text h2 {
		color: var(--theme-primary);
		font-size: 2rem;
		margin-bottom: 1.5rem;
	}

	.hero-text p {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	.key-benefits {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.benefit-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 500;
	}

	.benefit-icon {
		font-size: 1.2rem;
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	/* CTA Buttons */
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
		flex-wrap: wrap;
	}

	.btn {
		padding: 1rem 2rem;
		border-radius: var(--theme-button-border-radius);
		text-decoration: none;
		font-weight: 600;
		transition: all var(--theme-transition);
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border: 2px solid transparent;
		min-height: 44px;
	}

	.btn-primary {
		background: var(--theme-primary);
		color: var(--theme-on-primary);
		border-color: var(--theme-primary);
	}

	.btn-primary:hover {
		background: var(--theme-primary-hover);
		border-color: var(--theme-primary-hover);
		transform: translateY(-2px);
	}

	.btn-outline {
		background: transparent;
		color: var(--theme-primary);
		border-color: var(--theme-primary);
	}

	.btn-outline:hover {
		background: var(--theme-primary);
		color: var(--theme-on-primary);
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}
		
		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
		}
		
		.key-benefits {
			grid-template-columns: 1fr;
		}
		
		.hero-cta {
			justify-content: center;
		}
		
		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
</style>