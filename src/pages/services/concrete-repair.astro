---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import QuoteRequestForm from '../../components/forms/QuoteRequestForm.astro';

const seo = {
  title: 'Concrete Repair & Preparation | Professional Concrete Restoration | Queen City Surface Coatings',
  description: 'Expert concrete repair and preparation services including crack repair, surface restoration, and substrate preparation for coating applications in Cincinnati and Northern Kentucky.',
  keywords: 'concrete repair, concrete preparation, crack repair, surface restoration, substrate preparation, concrete restoration Cincinnati'
};
---

<Layout seo={seo}>
  <!-- Hero Section -->
  <section class="hero-section">
    <Container>
      <div class="hero-content">
        <div class="hero-text">
          <p class="hero-tagline">Foundation Restoration</p>
          <h1 class="hero-headline">Concrete Repair & Preparation</h1>
          <p class="hero-subheadline">
            Professional concrete repair and preparation services that restore structural integrity and create optimal surfaces for coating applications. From crack repair to complete surface restoration, we ensure your concrete foundation is ready for lasting results.
          </p>
          <div class="hero-ctas">
            <a href="/company/contact" class="btn btn-primary btn-large">Get Repair Assessment</a>
            <a href="/portfolio" class="btn btn-outline btn-large">View Repair Projects</a>
          </div>
        </div>
        <div class="hero-image">
          <img 
            src="/assets/images/services/concrete-repair-before.webp" 
            alt="Concrete damage before professional repair - Queen City Surface Coatings restoration services"
            loading="eager"
          />
        </div>
      </div>
    </Container>
  </section>

  <!-- Introduction Section -->
  <Container>
    <section class="intro-section">
      <div class="intro-content">
        <h2>Expert Concrete Restoration Services</h2>
        <p class="large-text">Our concrete repair and preparation services address structural issues and surface defects that can compromise the performance and longevity of coating systems. We specialize in comprehensive concrete restoration that ensures optimal adhesion and long-term durability for all subsequent applications.</p>
        <p class="large-text">From minor crack repairs to major surface restoration, our expert technicians use advanced techniques and premium materials to restore your concrete to optimal condition, creating the perfect foundation for protective and decorative coating systems.</p>
      </div>
    </section>
  </Container>

  <!-- Differentiators Section -->
  <Container>
    <section class="differentiators-section">
      <div class="section-header">
        <h2>Professional Repair Advantages</h2>
        <p>Our concrete repair expertise ensures long-lasting, structurally sound results:</p>
      </div>
      
      <div class="features-grid">
        <div class="feature-card">
          <h3>Structural Assessment</h3>
          <p>Comprehensive evaluation of concrete condition, identifying root causes of damage and developing targeted repair strategies</p>
        </div>
        <div class="feature-card">
          <h3>Advanced Repair Materials</h3>
          <p>Premium epoxy injection systems, structural patching compounds, and high-performance repair mortars for lasting results</p>
        </div>
        <div class="feature-card">
          <h3>Surface Preparation Expertise</h3>
          <p>Professional diamond grinding, shot blasting, and profiling techniques that create optimal coating adhesion surfaces</p>
        </div>
        <div class="feature-card">
          <h3>Moisture Management</h3>
          <p>Advanced moisture testing and mitigation systems to prevent future coating failures and structural issues</p>
        </div>
        <div class="feature-card">
          <h3>Quality Assurance</h3>
          <p>Comprehensive testing and verification procedures ensuring all repairs meet structural and coating preparation standards</p>
        </div>
      </div>
    </section>
  </Container>

  <!-- Process Section -->
  <Container>
    <section class="process-section">
      <div class="section-header">
        <h2>Professional Repair Process</h2>
        <p>Systematic approach ensuring comprehensive concrete restoration and preparation:</p>
      </div>
      
      <div class="process-grid">
        <div class="process-card">
          <div class="process-number">1</div>
          <h3>Damage Assessment</h3>
          <ul>
            <li>Comprehensive structural and surface evaluation</li>
            <li>Crack mapping and damage documentation</li>
            <li>Root cause analysis and investigation</li>
            <li>Repair specification development</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">2</div>
          <h3>Preparation Planning</h3>
          <ul>
            <li>Material selection and procurement</li>
            <li>Work sequence and scheduling coordination</li>
            <li>Safety protocols and containment setup</li>
            <li>Environmental condition monitoring</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">3</div>
          <h3>Structural Repairs</h3>
          <ul>
            <li>Crack injection with structural epoxies</li>
            <li>Spall repair and patching compound application</li>
            <li>Joint sealing and expansion joint repair</li>
            <li>Reinforcement and structural strengthening</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">4</div>
          <h3>Surface Preparation</h3>
          <ul>
            <li>Diamond grinding and surface profiling</li>
            <li>Contamination removal and degreasing</li>
            <li>Moisture testing and vapor barrier installation</li>
            <li>Final surface cleaning and inspection</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">5</div>
          <h3>Quality Verification</h3>
          <ul>
            <li>Comprehensive repair inspection and testing</li>
            <li>Surface profile and cleanliness verification</li>
            <li>Moisture content and vapor emission testing</li>
            <li>Documentation and coating readiness certification</li>
          </ul>
        </div>
      </div>
    </section>
  </Container>

  <!-- Collections Section -->
  <Container>
    <section class="collections-section">
      <div class="section-header">
        <h2>Concrete Repair Services</h2>
        <p>Comprehensive repair solutions for all concrete restoration needs:</p>
      </div>
      
      <div class="collections-grid">
        <div class="collection-card">
          <a href="/services/residential" class="collection-link">
            <h3>Crack Repair & Injection</h3>
            <p class="collection-desc">Structural crack repair using advanced epoxy injection systems</p>
            <ul>
              <li>Pressure injection for structural cracks</li>
              <li>Surface crack sealing and repair</li>
              <li>Movement joint installation</li>
              <li>Long-term crack monitoring systems</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Spall & Surface Repair</h3>
            <p class="collection-desc">Comprehensive surface restoration and patching services</p>
            <ul>
              <li>Concrete spall removal and repair</li>
              <li>High-performance patching compounds</li>
              <li>Surface leveling and restoration</li>
              <li>Texture matching and finishing</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Joint Sealing & Repair</h3>
            <p class="collection-desc">Professional joint maintenance and waterproofing</p>
            <ul>
              <li>Expansion joint repair and replacement</li>
              <li>Control joint sealing systems</li>
              <li>Waterproof joint sealants</li>
              <li>Joint movement accommodation</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Surface Preparation</h3>
            <p class="collection-desc">Professional substrate preparation for optimal coating adhesion</p>
            <ul>
              <li>Diamond grinding and profiling</li>
              <li>Shot blasting and abrasive preparation</li>
              <li>Contamination removal and degreasing</li>
              <li>Surface profile verification</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Moisture Mitigation</h3>
            <p class="collection-desc">Advanced moisture control and vapor barrier systems</p>
            <ul>
              <li>Moisture testing and evaluation</li>
              <li>Vapor barrier installation</li>
              <li>Moisture mitigation coatings</li>
              <li>Long-term moisture monitoring</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Structural Strengthening</h3>
            <p class="collection-desc">Advanced structural repair and reinforcement systems</p>
            <ul>
              <li>Carbon fiber reinforcement systems</li>
              <li>Structural adhesive applications</li>
              <li>Load transfer restoration</li>
              <li>Long-term structural monitoring</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
      </div>
    </section>
  </Container>

  <!-- Contact Section -->
  <section class="contact-section">
    <Container>
      <div class="contact-content">
        <div class="contact-info">
          <h2>Ready to Restore Your Concrete?</h2>
          <p>Schedule your concrete repair assessment today and discover how professional restoration can extend the life of your concrete surfaces and ensure optimal coating performance.</p>
          
          <div class="contact-methods">
            <div class="contact-button-wrapper">
              <p class="contact-label">Call</p>
              <a href="tel:+15132965525" class="contact-button contact-button-phone">
                <div class="contact-details">
                  <span class="contact-info">(513) 296-5525</span>
                </div>
              </a>
            </div>
            
            <div class="contact-button-wrapper">
              <p class="contact-label">Email</p>
              <a href="mailto:john@queencitysurfacecoatings.com" class="contact-button contact-button-email">
                <div class="contact-details">
                  <span class="contact-info">john@queencitysurfacecoatings.com</span>
                </div>
              </a>
            </div>
          </div>
        </div>
        
        <div class="contact-form">
          <QuoteRequestForm />
        </div>
      </div>
    </Container>
  </section>
</Layout>

