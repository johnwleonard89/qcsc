---
import { Container, CtaCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Garage Floor Epoxy Coating Cincinnati | Professional Installation & Repair',
	description: 'Transform your garage with professional epoxy floor coating in Cincinnati. Durable, chemical-resistant, slip-resistant floors. Free estimates from veteran-owned specialists.',
	keywords: 'garage floor epoxy, epoxy coating Cincinnati, garage floor refinishing, concrete coating, Cincinnati epoxy installer, garage makeover Ohio',
	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: 'Garage Floor Epoxy', url: 'https://queencitysurfacecoatings.com/services/garage-floor-epoxy/' }
	],
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Garage Floor Epoxy Coating",
		"description": "Professional garage floor epoxy coating installation and repair services in Cincinnati",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings LLC"
		},
		"areaServed": {
			"@type": "State",
			"name": "Ohio"
		},
		"offers": {
