---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import QuoteRequestForm from '../../components/forms/QuoteRequestForm.astro';

const seo = {
  title: 'Joint Removal & Repair | Professional Joint Maintenance | Queen City Surface Coatings',
  description: 'Expert joint removal and repair services for expansion joints, control joints, and construction joints in Cincinnati and Northern Kentucky concrete applications.',
  keywords: 'joint removal, joint repair, expansion joint, control joint, construction joint, joint sealing Cincinnati'
};
---

<Layout seo={seo}>
  <!-- Hero Section -->
  <section class="hero-section">
    <Container>
      <div class="hero-content">
        <div class="hero-text">
          <p class="hero-tagline">Joint Solutions</p>
          <h1 class="hero-headline">Joint Removal & Repair</h1>
          <p class="hero-subheadline">
            Professional joint maintenance services including expansion joint repair, control joint sealing, and construction joint restoration. We ensure proper joint function while preventing water infiltration and structural damage.
          </p>
          <div class="hero-ctas">
            <a href="/company/contact" class="btn btn-primary btn-large">Get Joint Assessment</a>
            <a href="/portfolio" class="btn btn-outline btn-large">View Joint Projects</a>
          </div>
        </div>
        <div class="hero-image">
          <img 
            src="/assets/images/new-projects/blue_metalic.webp" 
            alt="Professional joint repair and maintenance work - Queen City Surface Coatings"
            loading="eager"
          />
        </div>
      </div>
    </Container>
  </section>

  <!-- Introduction Section -->
  <Container>
    <section class="intro-section">
      <div class="intro-content">
        <h2>Expert Joint Maintenance Services</h2>
        <p class="large-text">Our joint removal and repair services address critical structural elements that allow concrete to expand, contract, and move naturally while maintaining surface integrity. Proper joint maintenance prevents water infiltration, structural damage, and coating system failures.</p>
        <p class="large-text">From expansion joints that accommodate building movement to control joints that manage crack formation, our specialized techniques ensure optimal joint performance while preparing surfaces for protective coating applications.</p>
      </div>
    </section>
  </Container>

  <!-- Differentiators Section -->
  <Container>
    <section class="differentiators-section">
      <div class="section-header">
        <h2>Professional Joint Expertise</h2>
        <p>Our joint maintenance services ensure long-term structural integrity and performance:</p>
      </div>
      
      <div class="features-grid">
        <div class="feature-card">
          <h3>Structural Movement Management</h3>
          <p>Expert understanding of building movement patterns and proper joint design for optimal expansion and contraction accommodation</p>
        </div>
        <div class="feature-card">
          <h3>Water Infiltration Prevention</h3>
          <p>Professional sealing systems that prevent moisture penetration while allowing proper joint movement and flexibility</p>
        </div>
        <div class="feature-card">
          <h3>Advanced Repair Materials</h3>
          <p>High-performance sealants, repair compounds, and joint systems designed for long-term durability and performance</p>
        </div>
        <div class="feature-card">
          <h3>Coating System Compatibility</h3>
          <p>Joint repairs designed to integrate seamlessly with protective coating systems for comprehensive surface protection</p>
        </div>
        <div class="feature-card">
          <h3>Preventive Maintenance Programs</h3>
          <p>Scheduled inspection and maintenance services to address joint issues before they become major structural problems</p>
        </div>
      </div>
    </section>
  </Container>

  <!-- Process Section -->
  <Container>
    <section class="process-section">
      <div class="section-header">
        <h2>Professional Joint Repair Process</h2>
        <p>Systematic approach ensuring proper joint function and longevity:</p>
      </div>
      
      <div class="process-grid">
        <div class="process-card">
          <div class="process-number">1</div>
          <h3>Joint Assessment</h3>
          <ul>
            <li>Comprehensive joint condition evaluation</li>
            <li>Movement pattern analysis and documentation</li>
            <li>Existing material condition assessment</li>
            <li>Repair specification development</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">2</div>
          <h3>Removal & Preparation</h3>
          <ul>
            <li>Existing joint material removal and cleanup</li>
            <li>Joint geometry verification and correction</li>
            <li>Surface preparation and primer application</li>
            <li>Backer rod installation as required</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">3</div>
          <h3>Material Selection</h3>
          <ul>
            <li>Sealant type selection based on movement requirements</li>
            <li>Compatibility verification with existing materials</li>
            <li>Environmental condition consideration</li>
            <li>Performance specification matching</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">4</div>
          <h3>Installation & Sealing</h3>
          <ul>
            <li>Professional sealant application techniques</li>
            <li>Proper joint geometry formation</li>
            <li>Surface finishing and tooling</li>
            <li>Curing time management and protection</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">5</div>
          <h3>Quality Assurance</h3>
          <ul>
            <li>Comprehensive installation inspection</li>
            <li>Adhesion and seal integrity testing</li>
            <li>Documentation and warranty activation</li>
            <li>Maintenance schedule development</li>
          </ul>
        </div>
      </div>
    </section>
  </Container>

  <!-- Collections Section -->
  <Container>
    <section class="collections-section">
      <div class="section-header">
        <h2>Joint Repair Services</h2>
        <p>Comprehensive joint maintenance solutions for all concrete applications:</p>
      </div>
      
      <div class="collections-grid">
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Expansion Joint Repair</h3>
            <p class="collection-desc">Critical joints that accommodate structural movement</p>
            <ul>
              <li>Building expansion and contraction accommodation</li>
              <li>Seismic movement joint systems</li>
              <li>Thermal expansion joint maintenance</li>
              <li>Structural integrity preservation</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Control Joint Sealing</h3>
            <p class="collection-desc">Joints designed to control crack formation and location</p>
            <ul>
              <li>Crack control and management</li>
              <li>Planned crack location guidance</li>
              <li>Surface continuity maintenance</li>
              <li>Water infiltration prevention</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Construction Joint Repair</h3>
            <p class="collection-desc">Joints created during concrete placement operations</p>
            <ul>
              <li>Cold joint repair and sealing</li>
              <li>Pour line treatment and restoration</li>
              <li>Joint alignment and leveling</li>
              <li>Surface integration and finishing</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/residential" class="collection-link">
            <h3>Residential Joint Maintenance</h3>
            <p class="collection-desc">Joint services for home concrete applications</p>
            <ul>
              <li>Driveway and patio joint sealing</li>
              <li>Garage floor expansion joint repair</li>
              <li>Walkway and sidewalk joint maintenance</li>
              <li>Foundation joint waterproofing</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Industrial Joint Systems</h3>
            <p class="collection-desc">Heavy-duty joint solutions for industrial applications</p>
            <ul>
              <li>Heavy equipment load accommodation</li>
              <li>Chemical-resistant joint sealants</li>
              <li>High-traffic joint durability</li>
              <li>Specialized industrial joint profiles</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/commercial" class="collection-link">
            <h3>Preventive Maintenance</h3>
            <p class="collection-desc">Ongoing joint inspection and maintenance programs</p>
            <ul>
              <li>Regular joint condition assessment</li>
              <li>Preventive repair and resealing</li>
              <li>Performance monitoring and documentation</li>
              <li>Scheduled maintenance programs</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
      </div>
    </section>
  </Container>

  <!-- Contact Section -->
  <section class="contact-section">
    <Container>
      <div class="contact-content">
        <div class="contact-info">
          <h2>Ready to Repair Your Joints?</h2>
          <p>Schedule your joint assessment today and ensure your concrete structures maintain proper movement accommodation and water protection.</p>
          
          <div class="contact-methods">
            <div class="contact-button-wrapper">
              <p class="contact-label">Call</p>
              <a href="tel:+15132965525" class="contact-button contact-button-phone">
                <div class="contact-details">
                  <span class="contact-info">(513) 296-5525</span>
                </div>
              </a>
            </div>
            
            <div class="contact-button-wrapper">
              <p class="contact-label">Email</p>
              <a href="mailto:john@queencitysurfacecoatings.com" class="contact-button contact-button-email">
                <div class="contact-details">
                  <span class="contact-info">john@queencitysurfacecoatings.com</span>
                </div>
              </a>
            </div>
          </div>
        </div>
        
        <div class="contact-form">
          <QuoteRequestForm />
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
/* Using the same comprehensive styles as the other pages */
