const jointRepairService = servicesConfig.commercial.services.find(s => s.title === "Joint Removal & Repair");

const cityData = {
  cityName: 'Louisville Area',
  state: 'Kentucky',
  county: 'Jefferson',
  service: jointRepairService,
  seo: {
    title: 'Louisville Area Commercial Joint Removal & Repair | Professional Concrete Joint Services | Queen City Surface Coatings',
    description: 'Professional commercial joint removal and repair in Louisville, Kentucky. Expansion joint replacement and control joint sealing for businesses throughout Louisville area.',
    keywords: 'Louisville commercial joint repair, Louisville commercial concrete joint removal, commercial expansion joint replacement Louisville, business joint sealing Louisville'
  },
  serviceArea: {
    description: 'Queen City Surface Coatings provides professional commercial joint removal and repair services throughout the Louisville area, Kentucky. Our waterproof joint systems ensure long-lasting protection for commercial concrete surfaces.',
    neighborhoods: [
      'Downtown Louisville', 'Highlands', 'Cherokee Triangle', 'Germantown', 'Old Louisville', 'Clifton', 'Crescent Hill', 'St. Matthews', 'Middletown', 'Anchorage', 'Jeffersontown', 'Hurstbourne', 'Lyndon', 'Douglass Hills', 'Graymoor-Devondale', 'Prospect', 'Northfield', 'Springhurst', 'East End', 'Butchertown'
    ]
  }
};
---

<CitySpecificServiceTemplate 
  cityName={cityData.cityName}
  state={cityData.state}
  county={cityData.county}
  service={cityData.service}
  seo={cityData.seo}
  serviceArea={cityData.serviceArea}
/>