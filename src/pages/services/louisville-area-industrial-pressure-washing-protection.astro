---
import CitySpecificServiceTemplate from '../../templates/CitySpecificServiceTemplate.astro';
import { servicesConfig } from '../../data/servicesData.js';

const pressureWashingService = servicesConfig.industrial.services.find(s => s.title === "Pressure Washing & Protection");

const cityData = {
  cityName: 'Louisville Area',
  state: 'Kentucky',
  county: 'Jefferson',
  service: pressureWashingService,
  seo: {
    title: 'Louisville Area Industrial Pressure Washing & Protection | Professional Concrete Cleaning | Queen City Surface Coatings',
    description: 'Professional industrial pressure washing and concrete protection services in Louisville, Kentucky. Heavy-duty cleaning and protective sealer application for industrial facilities.',
    keywords: 'Louisville industrial pressure washing, Louisville industrial concrete cleaning, industrial concrete sealer Louisville, facility pressure washing Louisville'
  },
  serviceArea: {
    description: 'Queen City Surface Coatings provides professional industrial pressure washing and protective services throughout the Louisville area, Kentucky. Our heavy-duty cleaning systems and protective sealers maintain and protect industrial concrete surfaces.',
    neighborhoods: [
      'Butchertown', 'Phoenix Hill', 'Shelby Park', 'Smoketown', 'Russell', 'Portland', 'Shively', 'Pleasure Ridge Park', 'Valley Station', 'Newburg', 'Fern Creek', 'Buechel', 'Okolona', 'Highview', 'Fairdale', 'Iroquois', 'Jacobs', 'Schnitzelburg', 'Germantown', 'Phoenix Hill'
    ]
  }
};
---

<CitySpecificServiceTemplate 
  cityName={cityData.cityName}
  state={cityData.state}
  county={cityData.county}
  service={cityData.service}
  seo={cityData.seo}
  serviceArea={cityData.serviceArea}
/>