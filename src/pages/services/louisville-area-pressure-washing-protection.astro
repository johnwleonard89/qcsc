---
import CitySpecificServiceTemplate from '../../templates/CitySpecificServiceTemplate.astro';
import { servicesConfig } from '../../data/servicesData.js';

const pressureWashingService = servicesConfig.residential.services.find(s => s.title === "Pressure Washing & Protection");

const cityData = {
  cityName: 'Louisville Area',
  state: 'Kentucky',
  county: 'Jefferson',
  service: pressureWashingService,
  seo: {
    title: 'Louisville Area Pressure Washing & Protection | Professional Concrete Cleaning | Queen City Surface Coatings',
    description: 'Professional pressure washing and concrete protection services in Louisville, Kentucky. High-pressure cleaning and protective sealer application throughout Louisville area.',
    keywords: 'Louisville pressure washing, Louisville concrete cleaning, concrete sealer Louisville, pressure washing services Louisville, concrete protection Louisville'
  },
  serviceArea: {
    description: 'Queen City Surface Coatings provides professional pressure washing and protective services throughout the Louisville area, Kentucky. Our high-pressure cleaning systems and protective sealers maintain and protect concrete surfaces.',
    neighborhoods: [
      'Highlands', 'Cherokee Triangle', 'Germantown', 'Old Louisville', 'Clifton', 'Crescent Hill', 'St. Matthews', 'Middletown', 'Anchorage', 'Jeffersontown', 'Hurstbourne', 'Lyndon', 'Douglass Hills', 'Graymoor-Devondale', 'Prospect', 'Northfield', 'Springhurst', 'East End', 'Butchertown', 'Nulu'
    ]
  }
};
---

<CitySpecificServiceTemplate 
  cityName={cityData.cityName}
  state={cityData.state}
  county={cityData.county}
  service={cityData.service}
  seo={cityData.seo}
  serviceArea={cityData.serviceArea}
/>