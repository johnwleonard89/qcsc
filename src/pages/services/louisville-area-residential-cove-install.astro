const cityData = {
  cityName: 'Louisville Area',
  state: 'Kentucky',
  county: 'Jefferson',
  service: coveInstallService,
  seo: {
    title: 'Louisville Area Residential Cove Install | Professional Floor-to-Wall Transition | Queen City Surface Coatings',
    description: 'Professional residential cove installation in Louisville, Kentucky. Seamless floor-to-wall transitions for enhanced cleanability in homes throughout Louisville area.',
    keywords: 'Louisville residential cove install, Louisville cove base installation, floor wall transition Louisville, residential cove Louisville'
  },
  serviceArea: {
    description: 'Queen City Surface Coatings provides professional residential cove installation throughout the Louisville area, Kentucky. Our seamless floor-to-wall transitions enhance cleanability and create a professional appearance in residential spaces.',
    neighborhoods: [
      'Highlands',
      'Cherokee Triangle',
      'Germantown',
      'Old Louisville',
      'Clifton',
      'Crescent Hill',
      'St. Matthews',
      'Middletown',
      'Anchorage',
