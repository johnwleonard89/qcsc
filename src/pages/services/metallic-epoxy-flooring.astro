---
import { Container, CtaCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Metallic Epoxy Flooring | Decorative Concrete Coating Cincinnati | Queen City Surface Coatings',
	description: 'Stunning metallic epoxy floors with unique artistic patterns. Custom decorative concrete coating for showrooms, basements & retail spaces in Cincinnati.',
	keywords: 'metallic epoxy flooring Cincinnati, decorative concrete coating, artistic floor patterns, showroom flooring, metallic floor coating Ohio',
	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: 'Metallic Epoxy Flooring', url: 'https://queencitysurfacecoatings.com/services/metallic-epoxy-flooring/' }
	],
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Metallic Epoxy Flooring",
		"description": "Custom decorative metallic epoxy flooring systems creating unique artistic patterns",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings LLC"
		},
		"areaServed": {
			"@type": "State",
			"name": "Ohio"
		},
		"offers": {
			"@type": "Offer",
			"priceCurrency": "USD",
			"availability": "https://schema.org/InStock"
		},
		"serviceType": "Decorative Concrete Coating",
		"category": "Construction Services"
	}
};
---

