  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 0;
  }
  
  .hero-headline {
    font-size: 2rem;
  }
  
  .hero-ctas {
    flex-direction: column;
    align-items: center;
  }
}

/* Introduction Section */
