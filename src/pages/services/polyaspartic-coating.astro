---
import { Container, CtaCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Polyaspartic Coating | Fast-Cure Concrete Coating Cincinnati | Queen City Surface Coatings',
	description: 'Professional polyaspartic concrete coating in Cincinnati. Fast-curing, UV-stable systems with same-day installation. Superior durability from veteran-owned specialists.',
	keywords: 'polyaspartic coating Cincinnati, fast cure concrete coating, UV stable flooring, same day installation, Cincinnati polyaspartic contractor, garage floor coating',
	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: 'Polyaspartic Coating', url: 'https://queencitysurfacecoatings.com/services/polyaspartic-coating/' }
	],
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Polyaspartic Coating",
		"description": "Fast-curing, UV-stable polyaspartic concrete coating systems for residential and commercial applications",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings LLC"
		},
		"areaServed": {
			"@type": "State",
			"name": "Ohio"
		},
		"offers": {
			"@type": "Offer",
			"priceCurrency": "USD",
			"availability": "https://schema.org/InStock"
		},
		"serviceType": "Concrete Coating",
		"category": "Construction Services"
