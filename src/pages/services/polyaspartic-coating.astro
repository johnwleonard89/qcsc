	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: 'Polyaspartic Coating', url: 'https://queencitysurfacecoatings.com/services/polyaspartic-coating/' }
	],
	structuredData: {
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Polyaspartic Coating",
		"description": "Fast-curing, UV-stable polyaspartic concrete coating systems for residential and commercial applications",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Queen City Surface Coatings LLC",
			"url": "https://queencitysurfacecoatings.com",
			"telephone": "+1-513-296-5525",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Milford",
				"addressRegion": "OH",
				"postalCode": "45150",
				"addressCountry": "US"
			}
		},
		"areaServed": [
			{
				"@type": "GeoCircle",
				"geoMidpoint": {
					"@type": "GeoCoordinates",
					"latitude": "39.1756",
					"longitude": "-84.2930"
				},
				"geoRadius": "50 miles"
			},
			{"@type": "State", "name": "Ohio"},
			{"@type": "State", "name": "Kentucky"},
			{"@type": "State", "name": "Indiana"}
		],
		"offers": {
			"@type": "Offer",
			"name": "Polyaspartic Coating Installation",
			"description": "Professional polyaspartic coating with same-day installation",
			"priceCurrency": "USD",
			"availability": "https://schema.org/InStock",
			"validThrough": "2025-12-31",
			"seller": {
				"@type": "LocalBusiness",
				"name": "Queen City Surface Coatings LLC"
			}
		},
		"serviceType": "Concrete Coating",
		"category": "Construction Services",
		"aggregateRating": {
			"@type": "AggregateRating",
			"ratingValue": "5.0",
			"reviewCount": "3",
			"bestRating": "5",
			"worstRating": "5"
		}
	}
};
---

