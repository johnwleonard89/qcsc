---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import QuoteRequestForm from '../../components/forms/QuoteRequestForm.astro';

const seo = {
  title: 'Residential Concrete Services | Home Concrete Solutions | Queen City Surface Coatings',
  description: 'Professional residential concrete services including garage floors, basement coatings, driveways, and decorative concrete solutions for homeowners in Cincinnati and Northern Kentucky.',
  keywords: 'residential concrete, garage floor coating, basement floor, driveway concrete, home concrete services, residential epoxy flooring Cincinnati'
};
---

<Layout seo={seo}>
  <!-- Hero Section -->
  <section class="hero-section">
    <Container>
      <div class="hero-content">
        <div class="hero-text">
          <p class="hero-tagline">Home Concrete Solutions</p>
          <h1 class="hero-headline">Residential Concrete Services</h1>
          <p class="hero-subheadline">
            Transform your home with professional concrete solutions designed for residential applications. From garage floors to basement coatings, we deliver durable, beautiful concrete finishes that enhance your property value.
          </p>
          <div class="hero-ctas">
            <a href="/company/contact#quote-form" class="btn btn-primary btn-large">Get Free Estimate</a>
            <a href="/portfolio" class="btn btn-outline btn-large">View Gallery</a>
          </div>
        </div>
        <div class="hero-image">
          <img 
            src="/assets/images/new-projects/garage_poly_corvette.webp" 
            alt="Professional residential garage floor coating - Queen City Surface Coatings"
            loading="eager"
          />
        </div>
      </div>
    </Container>
  </section>

  <!-- Introduction Section -->
  <Container>
    <section class="intro-section">
      <div class="intro-content">
        <h2>Professional Home Concrete Solutions</h2>
        <p class="large-text">Our residential concrete services are specifically designed for homeowners seeking durable, attractive concrete solutions that enhance both functionality and aesthetics. We specialize in garage floors, basement coatings, driveways, and decorative concrete applications that withstand daily residential use.</p>
        <p class="large-text">From protecting your garage floor from oil stains and tire marks to creating stunning basement entertainment spaces, our residential concrete solutions combine practical performance with beautiful finishes that complement your home's style.</p>
      </div>
    </section>
  </Container>

  <!-- Differentiators Section -->
  <Container>
    <section class="differentiators-section">
      <div class="section-header">
        <h2>Why Choose Our Residential Services</h2>
        <p>Our residential concrete solutions are tailored specifically for homeowner needs and lifestyle:</p>
      </div>
      
      <div class="features-grid">
        <div class="feature-card">
          <h3>Homeowner-Focused Approach</h3>
          <p>Residential-specific solutions designed for typical home use patterns, family safety, and aesthetic preferences</p>
        </div>
        <div class="feature-card">
          <h3>Property Value Enhancement</h3>
          <p>Professional concrete finishes that increase home value while providing immediate functional benefits</p>
        </div>
        <div class="feature-card">
          <h3>Family-Safe Materials</h3>
          <p>Low-VOC, environmentally responsible coatings safe for children, pets, and indoor air quality</p>
        </div>
        <div class="feature-card">
          <h3>Easy Maintenance Solutions</h3>
          <p>Simple cleaning and maintenance requirements perfect for busy homeowners and family schedules</p>
        </div>
        <div class="feature-card">
          <h3>Flexible Scheduling</h3>
          <p>Work around your family's schedule with convenient installation timing and minimal disruption</p>
        </div>
      </div>
    </section>
  </Container>

  <!-- Process Section -->
  <Container>
    <section class="process-section">
      <div class="section-header">
        <h2>Our Residential Installation Process</h2>
        <p>Streamlined process designed for minimal disruption to your home life:</p>
      </div>
      
      <div class="process-grid">
        <div class="process-card">
          <div class="process-number">1</div>
          <h3>Home Consultation</h3>
          <ul>
            <li>Free in-home assessment and measurement</li>
            <li>Discussion of family needs and preferences</li>
            <li>Review of concrete condition and preparation needs</li>
            <li>Detailed estimate with material options</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">2</div>
          <h3>Preparation Planning</h3>
          <ul>
            <li>Schedule work around family activities</li>
            <li>Protect surrounding areas and belongings</li>
            <li>Coordinate access and parking arrangements</li>
            <li>Prepare surfaces with minimal dust containment</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">3</div>
          <h3>Surface Preparation</h3>
          <ul>
            <li>Diamond grinding with dust collection systems</li>
            <li>Crack and joint repair as needed</li>
            <li>Thorough cleaning and degreasing</li>
            <li>Moisture testing and vapor barrier installation</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">4</div>
          <h3>Application Process</h3>
          <ul>
            <li>Professional coating application</li>
            <li>Decorative elements and color integration</li>
            <li>Quality control throughout process</li>
            <li>Proper ventilation and safety measures</li>
          </ul>
        </div>
        <div class="process-card">
          <div class="process-number">5</div>
          <h3>Final Inspection</h3>
          <ul>
            <li>Complete quality inspection and walkthrough</li>
            <li>Cleanup and site restoration</li>
            <li>Homeowner education on care and maintenance</li>
            <li>Warranty documentation and follow-up scheduling</li>
          </ul>
        </div>
      </div>
    </section>
  </Container>

  <!-- Collections Section -->
  <Container>
    <section class="collections-section">
      <div class="section-header">
        <h2>Residential Concrete Solutions</h2>
        <p>Choose from our comprehensive range of home concrete services:</p>
      </div>
      
      <div class="collections-grid">
        <!-- Residential Specific Services -->
        <div class="collection-card">
          <a href="/services/garage-floor-epoxy" class="collection-link">
            <h3>Garage Floor Coatings</h3>
            <p class="collection-desc">Transform your garage into a showroom-quality space</p>
            <ul>
              <li>Oil and stain resistance</li>
              <li>Easy cleaning and maintenance</li>
              <li>Multiple coating system options</li>
              <li>Enhanced durability for vehicle traffic</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/basement-floor-coating" class="collection-link">
            <h3>Basement Floor Coatings</h3>
            <p class="collection-desc">Turn your basement into your family's new favorite space</p>
            <ul>
              <li>Moisture and humidity protection</li>
              <li>Bright, welcoming finishes</li>
              <li>Enhanced lighting reflection</li>
              <li>Perfect for entertainment and family areas</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/kitchen-floor-coatings" class="collection-link">
            <h3>Kitchen Floor Coatings</h3>
            <p class="collection-desc">Create the culinary sanctuary you've always dreamed of</p>
            <ul>
              <li>Food-safe and hygienic surfaces</li>
              <li>Spill and stain resistant</li>
              <li>Heat and impact resistance</li>
              <li>Easy maintenance for busy families</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        
        <!-- Decorative Options -->
        <div class="collection-card">
          <a href="/services/flake-systems" class="collection-link">
            <h3>Decorative Flake Systems</h3>
            <p class="collection-desc">Popular multi-color patterns for enhanced beauty</p>
            <ul>
              <li>Wide variety of color combinations</li>
              <li>Slip-resistant surface texture</li>
              <li>Hides minor imperfections</li>
              <li>Attractive, contemporary appearance</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/metallic-epoxy-flooring" class="collection-link">
            <h3>Metallic Epoxy Flooring</h3>
            <p class="collection-desc">Stunning flowing patterns that capture light and movement</p>
            <ul>
              <li>Unique flowing metallic patterns</li>
              <li>High-end, sophisticated appearance</li>
              <li>Light-reflecting properties</li>
              <li>One-of-a-kind artistic floors</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/natural-stone-reproductions" class="collection-link">
            <h3>Natural Stone Reproductions</h3>
            <p class="collection-desc">Authentic stone beauty at a fraction of the cost</p>
            <ul>
              <li>Realistic stone textures and patterns</li>
              <li>No grout lines to maintain</li>
              <li>Custom pattern layouts available</li>
              <li>Superior durability over natural stone</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/textured-concrete-finishes" class="collection-link">
            <h3>Textured Concrete Finishes</h3>
            <p class="collection-desc">Add depth and character with specialized textures</p>
            <ul>
              <li>Multiple texture options available</li>
              <li>Enhanced slip resistance</li>
              <li>Artistic visual appeal</li>
              <li>Perfect for patios and walkways</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        
        <!-- Maintenance & Care Services -->
        <div class="collection-card">
          <a href="/services/concrete-repair" class="collection-link">
            <h3>Maintenance & Repair</h3>
            <p class="collection-desc">Expert restoration to extend the life of your surfaces</p>
            <ul>
              <li>Professional crack repair</li>
              <li>Surface preparation and restoration</li>
              <li>Coating restoration services</li>
              <li>Preventive maintenance programs</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
        <div class="collection-card">
          <a href="/services/pressure-washing-protection" class="collection-link">
            <h3>Pressure Washing & Protection</h3>
            <p class="collection-desc">Professional cleaning and protective treatments</p>
            <ul>
              <li>Deep surface cleaning</li>
              <li>Protective sealing applications</li>
              <li>Stain removal services</li>
              <li>Surface preparation for coatings</li>
            </ul>
            <div class="learn-more">Learn More →</div>
          </a>
        </div>
      </div>
    </section>
  </Container>

  <!-- Contact Section -->
  <section class="contact-section">
    <Container>
      <div class="contact-content">
        <div class="contact-info">
          <h2>Ready to Upgrade Your Home?</h2>
          <p>Get your free residential concrete consultation today and discover how professional concrete solutions can transform your home.</p>
          
          <div class="contact-methods">
            <div class="contact-button-wrapper">
              <p class="contact-label">Call</p>
              <a href="tel:+15132965525" class="contact-button contact-button-phone">
                <div class="contact-details">
                  <span class="contact-info">(513) 296-5525</span>
                </div>
              </a>
            </div>
            
            <div class="contact-button-wrapper">
              <p class="contact-label">Email</p>
              <a href="mailto:john@queencitysurfacecoatings.com" class="contact-button contact-button-email">
                <div class="contact-details">
                  <span class="contact-info">john@queencitysurfacecoatings.com</span>
                </div>
              </a>
            </div>
          </div>
        </div>
        
        <div class="contact-form">
          <QuoteRequestForm />
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
/* Hero Section Styling */
.hero-section {
  background: linear-gradient(135deg, var(--theme-surface-2) 0%, var(--theme-navy-dark) 100%);
  color: var(--theme-on-surface-2);
  padding: 4rem 0;
  margin-bottom: 3rem;
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 80%, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 193, 7, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.hero-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
  min-height: 500px;
  position: relative;
  z-index: 1;
}

.hero-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-tagline {
  font-family: var(--theme-font-family-headings);
  font-size: 1.375rem;
  font-weight: var(--font-weight-medium);
  color: #FFC107;
  margin-bottom: 1.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  opacity: 0.95;
}

.hero-headline {
  font-family: var(--theme-font-family-headings);
  font-size: var(--font-size-h1);
  font-weight: var(--font-weight-bold);
  margin-bottom: 1rem;
  line-height: var(--line-height-tight);
  color: #FFC107;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.hero-subheadline {
  font-size: 1.25rem;
  margin-bottom: 2.5rem;
  opacity: 0.95;
  line-height: var(--line-height-relaxed);
  color: rgba(255, 255, 255, 0.9);
}

.hero-ctas {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
}

/* Hero section button overrides */
.hero-section .btn-primary {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #000 !important;
}

.hero-section .btn-primary:hover {
  background: #E6AC00 !important;
  border-color: #E6AC00 !important;
  color: #000 !important;
}

.hero-section .btn-outline {
  background: transparent !important;
  border-color: #FFC107 !important;
  color: #FFC107 !important;
}

.hero-section .btn-outline:hover {
  background: #FFC107 !important;
  border-color: #FFC107 !important;
  color: #000 !important;
}

.hero-image {
  position: relative;
}

.hero-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, var(--theme-overlay) 0%, transparent 70%);
  z-index: 1;
  border-radius: var(--theme-card-radius);
}

.hero-image img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-radius: var(--theme-card-radius);
  box-shadow: var(--theme-shadow-dark);
  filter: contrast(1.1) saturate(1.05);
  position: relative;
}

/* Responsive hero design */
@media (max-width: 1024px) {
  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 0;
  }
  
  .hero-headline {
    font-size: 2rem;
  }
  
  .hero-ctas {
    flex-direction: column;
    align-items: center;
  }
}

/* Introduction Section */
.intro-section {
  padding: 4rem 0;
  text-align: center;
}

.intro-content h2 {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--theme-text-primary);
  margin-bottom: 2rem;
}

.large-text {
  font-size: 1.25rem;
  line-height: var(--line-height-relaxed);
  color: var(--theme-text-secondary);
  margin-bottom: 2rem;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

/* Section Headers */
.section-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-header h2 {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--theme-text-primary);
  margin-bottom: 1.5rem;
}

.section-header p {
  font-size: 1.125rem;
  color: var(--theme-text-secondary);
  line-height: var(--line-height-relaxed);
  max-width: 700px;
  margin: 0 auto;
}

/* Features Grid */
.differentiators-section {
  padding: 4rem 0;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  justify-items: center;
}

.feature-card {
  background: var(--theme-bg);
  padding: 2.5rem;
  border-radius: var(--theme-card-radius);
  text-align: center;
  box-shadow: var(--theme-shadow-light);
  border: 1px solid var(--theme-border-light);
  transition: transform var(--theme-transition);
}

.feature-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--theme-shadow-medium);
}

.features-grid .feature-card:nth-child(5) {
  grid-column: 1 / -1;
  max-width: 280px;
  margin: 0 auto;
}

.feature-card h3 {
  font-size: 1.25rem;
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  margin-bottom: 1rem;
}

.feature-card p {
  color: var(--theme-text-secondary);
  line-height: var(--line-height-relaxed);
}

/* Process Grid */
.process-section {
  padding: 4rem 0;
}

.process-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 2rem;
}

.process-card {
  background: var(--theme-bg);
  border-radius: var(--theme-card-radius);
  box-shadow: var(--theme-shadow-light);
  overflow: hidden;
  transition: transform var(--theme-transition);
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 2rem 1.5rem;
}

.process-card:hover {
  transform: translateY(-12px);
  box-shadow: var(--theme-shadow-medium);
}

.process-number {
  background: var(--theme-primary);
  color: var(--theme-on-primary);
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-bold);
  margin: 0 auto 1rem;
  font-size: 1.125rem;
}

.process-card h3 {
  font-size: 1rem;
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  margin-bottom: 1.5rem;
  line-height: 1.3;
}

.process-card ul {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: left;
  flex: 1;
}

.process-card li {
  padding: 0.5rem 0;
  color: var(--theme-text-secondary);
  font-size: 0.9rem;
  line-height: 1.5;
  position: relative;
  padding-left: 1rem;
}

.process-card li::before {
  content: '•';
  color: var(--theme-primary);
  position: absolute;
  left: 0;
  top: 0.5rem;
  font-weight: bold;
}

/* Collections Grid */
.collections-section {
  padding: 4rem 0;
}

.collections-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
  justify-items: center;
}

.collection-card {
  background: var(--theme-bg);
  border-radius: var(--theme-card-radius);
  box-shadow: var(--theme-shadow-light);
  overflow: hidden;
  transition: transform var(--theme-transition);
  display: flex;
  flex-direction: column;
}

.collection-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--theme-shadow-medium);
}

/* For 9 items: 3 on each of 3 rows */
@media (min-width: 1024px) {
  .collections-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.collection-card h3 {
  font-size: 1.25rem;
  font-weight: var(--font-weight-semibold);
  color: var(--theme-text-primary);
  margin-bottom: 1rem;
  padding: 2rem 2rem 0;
}

.collection-desc {
  font-style: italic;
  color: var(--theme-text-secondary);
  margin-bottom: 1.5rem;
  padding: 0 2rem;
}

.collection-card ul {
  list-style: none;
  padding: 0 2rem 2rem;
  margin: 0;
  flex: 1;
}

.collection-card li {
  padding: 0.5rem 0;
  color: var(--theme-text-secondary);
  position: relative;
  padding-left: 1.5rem;
  line-height: 1.6;
}

.collection-card li::before {
  content: '✓';
  color: var(--theme-primary);
  position: absolute;
  left: 0;
  top: 0.5rem;
  font-weight: bold;
}

.collection-link {
  text-decoration: none;
  color: inherit;
  display: block;
  transition: transform var(--theme-transition);
}

.collection-link:hover {
  color: inherit;
}

.learn-more {
  background: var(--theme-primary);
  color: var(--theme-on-primary);
  padding: 0.75rem 1.5rem;
  text-align: center;
  font-weight: var(--font-weight-semibold);
  font-size: 0.9rem;
  margin: 0;
  transition: background-color var(--theme-transition);
}

.collection-link:hover .learn-more {
  background: var(--theme-primary-hover);
}

/* Contact Section */
.contact-section {
  background: var(--theme-surface-1);
  padding: 4rem 0;
}

.contact-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: start;
}

.contact-info h2 {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  color: var(--theme-text-primary);
  margin-bottom: 1rem;
}

.contact-info > p {
  font-size: 1.125rem;
  line-height: var(--line-height-relaxed);
  margin-bottom: 2rem;
  color: var(--theme-text-secondary);
}

.contact-methods {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  margin-bottom: 2rem;
}

.contact-button-wrapper {
  width: 50%;
}

.contact-label {
  font-size: 1rem;
  font-weight: var(--font-weight-semibold);
  color: #002F4B;
  text-align: center;
  margin: 0 0 0.5rem 0;
}

.contact-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 0.25rem;
  padding: 0.375rem 0.5rem;
  border-radius: var(--theme-card-radius);
  border: none;
  transition: var(--theme-transition);
  text-decoration: none;
  width: 100%;
  cursor: pointer;
  min-height: 60px;
  justify-content: center;
}

.contact-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

.contact-button-phone {
  background: #FFC107;
  color: #002F4B;
}

.contact-button-phone:hover {
  background: #E6AC00;
  color: #002F4B;
}

.contact-button-email {
  background: #002F4B;
  color: white;
}

.contact-button-email:hover {
  background: #001f36;
  color: white;
}

.contact-button-email .contact-info {
  color: #FFC107;
}

.contact-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 0.25rem;
}

.contact-details .contact-info {
  font-size: 1rem;
  font-weight: var(--font-weight-semibold);
  display: block;
  margin: 0;
  text-align: center;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .process-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .process-grid .process-card:nth-child(4) {
    grid-column: 1;
  }
  
  .process-grid .process-card:nth-child(5) {
