import { Container } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import QuoteRequestForm from '../components/forms/QuoteRequestForm.astro';
import { servicesConfig } from '../data/servicesData.js';

export interface Props {
  // City-specific information
  cityName: string;
  state: string;
  county: string;
  
  // Service information from servicesData.js
  service: {
    title: string;
    description: string;
    features: string[];
    image: string;
    imageAlt: string;
  };
  
  // City-specific overrides
  seo: {
    title: string;
    description: string;
    keywords: string;
  };
  
  // Local area information
  serviceArea: {
    neighborhoods?: string[];
    landmarks?: string[];
    description: string;
  };
}

const { service, cityName, state, county, seo, serviceArea } = Astro.props;

// Basic validation - provide defaults if service is missing
const safeService = service || {
  title: 'Professional Service',
  description: 'Expert concrete coating services',
  features: ['Professional Installation', 'Quality Materials', 'Expert Service'],
  image: '/assets/images/services/default-service.webp',
  imageAlt: 'Professional concrete coating service'
};

// Create state abbreviation
const stateAbbr = state === 'Ohio' ? 'OH' : state === 'Kentucky' ? 'KY' : 'IN';

// Create localized versions of the service data
const localizedHero = {
  tagline: `${cityName} Excellence`,
  headline: `${safeService.title} in ${cityName}, ${stateAbbr}`,
  subheadline: `${safeService.description} Proudly serving ${cityName}, ${state} with military precision installation and guaranteed results.`
};

const localizedIntro = {
  title: `Professional ${safeService.title} Services in ${cityName}`,
  content: [
    `Queen City Surface Coatings brings military precision and local expertise to every ${safeService.title.toLowerCase()} project in ${cityName}, ${state}. Our team understands the unique needs of ${cityName} properties and delivers personalized service throughout the community.`,
    `We serve all areas of ${cityName}, providing the same high-quality installation and customer service that has made us the trusted choice for concrete coating services throughout ${county} County.`
  ]
};

const localizedContact = {
  title: `Ready to Transform Your ${cityName} Property?`,
  description: `Get a free estimate for professional ${safeService.title.toLowerCase()} in ${cityName}, ${state}. We're here to help transform your space with military precision and superior results.`
};

// Generate service categorization and cross-linking data
function generateServiceLinks(currentServiceTitle, cityName, state) {
  const citySlug = cityName === 'Louisville Area' ? 'louisville-area' : cityName.toLowerCase();
  const stateSlug = state.toLowerCase() === 'ohio' ? 'oh' : state.toLowerCase() === 'kentucky' ? 'ky' : 'in';
  
  // Service URL mapping - maps service titles to their URL segments
  const serviceUrlMap = {
    'Garage Floor Coatings': 'garage-floor-epoxy',
    'Basement Floor Coatings': 'basement-floor-coating', 
    'Kitchen Floor Coatings': 'kitchen-floor-coatings',
    'Retail': 'retail-flooring',
    'Warehouses': 'warehouse-flooring',
    'Office': 'office-flooring',
    'Manufacturing Facilities': 'manufacturing-flooring',
    'Food & Beverage': 'food-beverage-flooring',
    'Automotive': 'automotive-flooring',
    'Flake Systems': 'flake-systems',
    'Metallic Epoxy': 'metallic-epoxy-flooring',
    'Natural Stone Reproductions': 'natural-stone-reproductions',
    'Textured Concrete Finishes': 'textured-concrete-finishes',
    'Cove Install': 'cove-install',
    'Joint Removal & Repair': 'joint-removal-repair',
    'Pressure Washing & Protection': 'pressure-washing-protection'
  };

  // Handle category-specific URL prefixes for non-residential services
  function getServiceUrlSlug(service, category) {
    const baseSlug = serviceUrlMap[service.title] || service.title.toLowerCase().replace(/[^a-z0-9]+/g, '-');
    
    // For commercial and industrial services, add category prefix to certain services
    if (category === 'commercial' && ['Cove Install', 'Joint Removal & Repair', 'Pressure Washing & Protection'].includes(service.title)) {
      return `commercial-${baseSlug}`;
    } else if (category === 'industrial' && ['Cove Install', 'Joint Removal & Repair', 'Pressure Washing & Protection'].includes(service.title)) {
      return `industrial-${baseSlug}`;
    } else if (category === 'residential' && ['Cove Install', 'Joint Removal & Repair', 'Pressure Washing & Protection'].includes(service.title)) {
      return `residential-${baseSlug}`;
    }
    
    return baseSlug;
  }

  // Find current service category
  let currentCategory = null;
  let currentService = null;
  
  for (const [categoryKey, category] of Object.entries(servicesConfig)) {
    const service = category.services.find(s => s.title === currentServiceTitle);
    if (service) {
      currentCategory = categoryKey;
      currentService = service;
      break;
    }
  }

  // Generate related services within same category
  const relatedServices = currentCategory ? 
    servicesConfig[currentCategory].services
      .filter(s => s.title !== currentServiceTitle)
      .slice(0, 3)
      .map(s => ({
        title: s.title,
        description: s.description,
        url: `/services/${citySlug}-${getServiceUrlSlug(s, currentCategory)}`
      })) : [];

  // Generate popular services from other categories
  const popularServices = [];
  const otherCategories = Object.keys(servicesConfig).filter(cat => cat !== currentCategory);
  
  // Prioritize certain popular services across categories
  const priorityServices = ['Garage Floor Coatings', 'Metallic Epoxy', 'Retail', 'Manufacturing Facilities'];
  
  for (const category of otherCategories.slice(0, 2)) {
    let service = servicesConfig[category].services.find(s => priorityServices.includes(s.title));
    if (!service) {
      service = servicesConfig[category].services[0]; // Fallback to first service
    }
    
    if (service) {
      popularServices.push({
        title: service.title,
        description: service.description,
        category: servicesConfig[category].title,
        url: `/services/${citySlug}-${getServiceUrlSlug(service, category)}`
      });
    }
  }

  return {
    relatedServices,
    popularServices,
    mainCityUrl: `/services/${citySlug}-${stateSlug}-concrete-services`,
    categoryTitle: currentCategory ? servicesConfig[currentCategory].title : 'Services'
  };
}

const linkingData = generateServiceLinks(safeService.title, cityName, state);
