    </section>
  )}

  <!-- Popular Services Section -->
  {linkingData.popularServices.length > 0 && (
    <section class="popular-services-section">
      <Container>
        <div class="section-header">
          <h2>Popular {cityName} Concrete Services</h2>
          <p>Discover other professional concrete coating services we offer in {cityName}</p>
        </div>
        
        <div class="popular-services-grid">
          {linkingData.popularServices.map((service) => (
            <div class="popular-service-card">
              <div class="service-category">{service.category}</div>
              <h3>{service.title}</h3>
              <p>{service.description}</p>
              <a href={service.url} class="service-link">Explore Service →</a>
            </div>
