---
import { Container, CtaCardSection } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import QuoteRequestForm from '../components/forms/QuoteRequestForm.astro';
import type { County, Service } from '../data/locations';

export interface Props {
	county: County;
	service: Service;
	relatedCounties: County[];
	relatedServices: Service[];
}

const { county, service, relatedCounties, relatedServices } = Astro.props;

const seo = {
	title: `${service.name} ${county.name} County ${county.stateAbbr} | Queen City Surface Coatings`,
	description: `Professional ${service.name.toLowerCase()} services throughout ${county.name} County, ${county.state}. Expert concrete coating near ${county.landmarks.slice(0, 2).join(' and ')}. Licensed, bonded, insured.`,
	keywords: `${service.name.toLowerCase()} ${county.name} county, concrete coating ${county.name} county ${county.stateAbbr}, ${service.slug} ${county.state}, ${county.name} county flooring contractors`,
	type: 'service',
	breadcrumbs: [
		{ name: 'Home', url: 'https://queencitysurfacecoatings.com/' },
		{ name: 'Services', url: 'https://queencitysurfacecoatings.com/services/' },
		{ name: service.name, url: `https://queencitysurfacecoatings.com/services/${service.slug}/` },
		{ name: `${county.name} County`, url: `https://queencitysurfacecoatings.com/services/${service.slug}/${county.name.toLowerCase()}-county-${county.stateAbbr.toLowerCase()}/` }
	]
};

// FAQ Schema
const faqSchema = {
	"@context": "https://schema.org",
	"@type": "FAQPage",
	"mainEntity": [
		{
			"@type": "Question",
			"name": `Do you provide ${service.name.toLowerCase()} throughout all of ${county.name} County?`,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": `Yes, we provide professional ${service.name.toLowerCase()} services throughout all of ${county.name} County, ${county.state}, including all ${county.cities.length} municipalities and unincorporated areas. We serve ${county.cities.slice(0, 5).join(', ')}, and all surrounding communities.`
			}
		},
		{
			"@type": "Question", 
			"name": `What makes your ${service.name.toLowerCase()} suitable for ${county.name} County?`,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": `Our ${service.name.toLowerCase()} systems are specifically designed for ${county.state}'s climate conditions. We use premium materials that withstand freeze-thaw cycles, humidity, and temperature fluctuations common in ${county.name} County.`
			}
		},
		{
			"@type": "Question",
			"name": `How long does ${service.name.toLowerCase()} installation take in ${county.name} County?`,
			"acceptedAnswer": {
				"@type": "Answer",
				"text": `Installation timelines vary by project size and scope. Most residential ${service.name.toLowerCase()} projects in ${county.name} County are completed in 1-3 days, while commercial installations may take longer depending on square footage and preparation requirements.`
			}
		}
	]
};
---

<Layout {seo}>
	<!-- FAQ Schema -->
	<script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>

	<!-- Page Header -->
	<Container>
		<section class="page-header">
			<nav class="breadcrumb" aria-label="Breadcrumb">
				<ol>
					<li><a href="/">Home</a></li>
					<li><a href="/services/">Services</a></li>
					<li><a href={`/services/${service.slug}/`}>{service.name}</a></li>
					<li aria-current="page">{county.name} County</li>
				</ol>
			</nav>
			<h1>{service.name} {county.name} County, {county.stateAbbr}</h1>
			<p class="page-subtitle">
				Expert {service.name.toLowerCase()} services throughout {county.name} County, {county.state}. 
				Professional concrete coating solutions with military precision and lifetime quality.
			</p>
		</section>
	</Container>

	<!-- Service Overview -->
	<Container>
		<section class="service-overview">
			<div class="overview-content">
				<h2>Professional {service.name} Throughout {county.name} County</h2>
				<p>
					Queen City Surface Coatings proudly serves all of {county.name} County with comprehensive {service.name.toLowerCase()} solutions. 
					From {county.cities[0]} to {county.cities[county.cities.length - 1]}, we bring the same level of expertise and quality to every project.
				</p>
				
				<div class="service-stats">
					<div class="stat-item">
						<div class="stat-number">{county.cities.length}+</div>
						<div class="stat-label">Cities Served</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">24/7</div>
						<div class="stat-label">Emergency Service</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">100%</div>
						<div class="stat-label">Satisfaction Guarantee</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">Free</div>
						<div class="stat-label">Estimates</div>
					</div>
				</div>
			</div>
		</section>
	</Container>

	<!-- County Coverage -->
	<Container>
		<section class="county-coverage">
			<h2>{service.name} Coverage Across {county.name} County</h2>
			<div class="coverage-text">
				<p>We provide {service.name.toLowerCase()} services to all {county.cities.length} municipalities and communities throughout {county.name} County. Our experienced team brings military precision and attention to detail to every project, ensuring consistent quality across all locations.</p>
				
				<p>From residential garages to commercial facilities, we serve homeowners and businesses throughout {county.name} County with the same commitment to excellence. Each project receives personalized attention and professional installation backed by our satisfaction guarantee.</p>
			</div>
			
			<div class="cities-grid">
				{county.cities.map((city) => (
					<div class="city-link-card">
						<h3>
							<a href={`/services/${service.slug}/${city.toLowerCase().replace(/\s+/g, '-')}-${county.stateAbbr.toLowerCase()}/`}>
								{service.name} {city}, {county.stateAbbr}
							</a>
						</h3>
						<p>Professional {service.name.toLowerCase()} services in {city}, {county.name} County</p>
					</div>
				))}
			</div>

			<div class="county-details">
				<div class="detail-item">
					<strong>Population Served:</strong> {county.population}
				</div>
				<div class="detail-item">
					<strong>ZIP Codes:</strong> {county.zipCodes.slice(0, 10).join(', ')}...
				</div>
				<div class="detail-item">
					<strong>Major Landmarks:</strong> {county.landmarks.slice(0, 5).join(', ')}
				</div>
			</div>
		</section>
	</Container>

	<!-- Process Steps -->
	<Container>
		<section class="process-section">
			<h2>Our {service.name} Process in {county.name} County</h2>
			<div class="process-grid">
				<div class="process-step">
					<div class="step-number">1</div>
					<h3>Local {county.name} County Expertise</h3>
					<p>We understand the unique concrete challenges in {county.cities.slice(0, 3).join(', ')} homes and businesses.</p>
				</div>
				<div class="process-step">
					<div class="step-number">2</div>
					<h3>Military-Grade Preparation</h3>
					<p>Veteran-owned precision ensures your {county.name} County surface is properly prepared for lasting results.</p>
				</div>
				<div class="process-step">
					<div class="step-number">3</div>
					<h3>Premium {service.name} Installation</h3>
					<p>Professional application using industry-leading materials designed for {county.state}'s climate conditions.</p>
				</div>
				<div class="process-step">
					<div class="step-number">4</div>
					<h3>Quality Assurance & Warranty</h3>
					<p>Every {county.name} County project includes thorough inspection and our satisfaction guarantee.</p>
				</div>
			</div>
		</section>
	</Container>

	<!-- Applications -->
	<Container>
		<section class="applications-section">
			<h2>Why Choose Queen City Surface Coatings for {county.name} County?</h2>
			<div class="applications-grid">
				<div class="application-card">
					<h3>Veteran-Owned Excellence</h3>
					<p>Military precision and attention to detail ensures every {county.name} County project meets the highest standards.</p>
				</div>
				<div class="application-card">
					<h3>Local {county.name} County Knowledge</h3>
					<p>We understand the specific needs of {county.cities.slice(0, 2).join(' and ')} area homes and businesses.</p>
				</div>
				<div class="application-card">
					<h3>Premium Materials & Warranty</h3>
					<p>Industry-leading products backed by comprehensive warranties for your peace of mind.</p>
				</div>
				<div class="application-card">
					<h3>Free Estimates & Consultations</h3>
					<p>No-obligation assessments with detailed recommendations tailored to your specific project needs.</p>
				</div>
			</div>
		</section>
	</Container>

	<!-- Related Services -->
	<Container>
		<section class="related-services">
			<h2>Additional Services in {county.name} County</h2>
			<p>Explore our complete range of concrete coating services available throughout {county.name} County:</p>
			
			<div class="services-grid">
				{relatedServices.map((relatedService) => (
					<div class="service-card">
						<h3>
							<a href={`/services/${relatedService.slug}/${county.name.toLowerCase()}-county-${county.stateAbbr.toLowerCase()}/`}>
								{relatedService.name} {county.name} County
							</a>
						</h3>
						<p>{relatedService.description}</p>
						<a href={`/services/${relatedService.slug}/${county.name.toLowerCase()}-county-${county.stateAbbr.toLowerCase()}/`} class="service-link">
							Learn More â†’
						</a>
					</div>
				))}
			</div>
		</section>
	</Container>

	<!-- Related Counties -->
	<Container>
		<section class="related-counties">
			<h2>{service.name} in Nearby Counties</h2>
			<p>We also provide {service.name.toLowerCase()} services in surrounding counties:</p>
			
			<div class="counties-grid">
				{relatedCounties.map((relatedCounty) => (
					<div class="county-card">
						<h3>
							<a href={`/services/${service.slug}/${relatedCounty.name.toLowerCase()}-county-${relatedCounty.stateAbbr.toLowerCase()}/`}>
								{service.name} {relatedCounty.name} County, {relatedCounty.stateAbbr}
							</a>
						</h3>
						<p>Serving {relatedCounty.population} residents</p>
					</div>
				))}
			</div>
		</section>
	</Container>

	<!-- Contact Section -->
	<section class="contact-section">
		<Container>
			<div class="contact-content">
				<div class="contact-info">
					<h2>Ready to Transform Your {county.name} County Space?</h2>
					<p>Get your free, no-obligation estimate today. We'll assess your space and provide detailed recommendations tailored to your specific needs in {county.name} County, {county.state}.</p>
					
					<div class="contact-methods">
						<div class="contact-button-wrapper">
							<a href="tel:+15132965525" class="contact-button contact-button-phone">
								<div class="contact-icon"></div>
								<div class="contact-details">
									<h4>Call for Immediate Service</h4>
									<span class="contact-info">(513) 296-5525</span>
									<span class="contact-availability">Available 7 days a week</span>
								</div>
							</a>
						</div>
						
						<div class="contact-button-wrapper">
							<a href="mailto:john@queencitysurfacecoatings.com" class="contact-button contact-button-email">
								<div class="contact-icon"></div>
								<div class="contact-details">
									<h4>Email for Detailed Quotes</h4>
									<span class="contact-info">john@queencitysurfacecoatings.com</span>
									<span class="contact-availability">Response within 24 hours</span>
								</div>
							</a>
						</div>
					</div>
					
					<div class="business-hours">
						<h4>Business Hours</h4>
						<div class="hours-list">
							<div class="hours-item">
								<span>Monday - Friday:</span>
								<span class="hours-time">7:00 AM - 6:00 PM</span>
							</div>
							<div class="hours-item">
								<span>Saturday:</span>
								<span class="hours-time">8:00 AM - 4:00 PM</span>
							</div>
							<div class="hours-item">
								<span>Sunday:</span>
								<span class="hours-time">By Appointment</span>
							</div>
						</div>
					</div>
				</div>
				
				<div class="contact-form">
					<QuoteRequestForm />
				</div>
			</div>
		</Container>
	</section>
</Layout>


<style>
	/* Page Header */
	.page-header {
		background: var(--theme-surface-2);
		color: var(--theme-on-surface-2);
		text-align: center;
		padding: 4rem 0;
		margin-bottom: 3rem;
	}

	.breadcrumb {
		margin-bottom: 1.5rem;
	}

	.breadcrumb ol {
		display: flex;
		justify-content: center;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
		font-size: 0.9rem;
	}

	.breadcrumb li:not(:last-child)::after {
		content: ">";
		margin-left: 0.5rem;
		opacity: 0.6;
		color: rgba(255, 255, 255, 0.6);
	}

	.breadcrumb a {
		color: #FFC107;
		text-decoration: none;
	}

	.breadcrumb a:hover {
		text-decoration: underline;
	}

	.breadcrumb li[aria-current="page"] {
		color: rgba(255, 255, 255, 0.8);
	}

	.page-header h1 {
		font-size: 3rem;
		color: #FFC107;
		margin-bottom: 1rem;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: rgba(255, 255, 255, 0.9);
		opacity: 0.95;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.5;
	}

	/* Service Overview */
	.service-overview {
		margin: 4rem 0;
		text-align: center;
	}

	.overview-content h2 {
		color: var(--theme-primary);
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.overview-content p {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	.service-stats {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1.5rem;
		max-width: 800px;
		margin: 0 auto;
	}

	.stat-item {
		text-align: center;
		padding: 1rem;
		background: var(--theme-surface-1);
		border-radius: 0.5rem;
	}

	.stat-number {
		font-size: 2rem;
		font-weight: 700;
		color: var(--theme-primary);
		margin-bottom: 0.25rem;
	}

	.stat-label {
		font-size: 0.9rem;
		color: var(--theme-on-surface-1);
		opacity: 0.8;
	}

	/* County Coverage */
	.county-coverage {
		background: var(--theme-surface-1);
		padding: 4rem 2rem;
		border-radius: 1rem;
		margin: 4rem 0;
		text-align: center;
	}

	.county-coverage h2 {
		text-align: center;
		color: var(--theme-primary);
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.coverage-text {
		max-width: 800px;
		margin: 0 auto 3rem auto;
		text-align: left;
	}

	.coverage-text p {
		font-size: 1.1rem;
		line-height: 1.6;
		margin: 0 0 3rem 0 !important;
		padding-bottom: 1rem !important;
		text-indent: 2rem;
		opacity: 0.9;
		display: block;
		border-bottom: 1px solid transparent;
	}

	.coverage-text p:first-child {
		margin-top: 0 !important;
		padding-top: 0 !important;
	}

	.coverage-text p:last-child {
		margin-bottom: 0 !important;
		padding-bottom: 0 !important;
	}

	.cities-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin: 3rem 0;
	}

	.city-link-card {
		background: var(--theme-bg);
		padding: 1.5rem;
		border-radius: 0.5rem;
		border-left: 4px solid var(--theme-primary);
	}

	.city-link-card h3 {
		margin-bottom: 0.5rem;
	}

	.city-link-card h3 a {
		color: var(--theme-primary);
		text-decoration: none;
		font-size: 1.1rem;
	}

	.city-link-card h3 a:hover {
		text-decoration: underline;
	}

	.city-link-card p {
		font-size: 0.9rem;
		opacity: 0.8;
		margin: 1rem 0;
		text-indent: 1rem;
		line-height: 1.5;
	}

	.county-details {
		display: grid;
		gap: 1rem;
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(0, 0, 0, 0.1);
	}

	.detail-item {
		font-size: 0.95rem;
	}

	.detail-item strong {
		color: var(--theme-primary);
	}

	/* Process Section */
	.process-section {
		margin: 4rem 0;
		text-align: center;
	}

	.process-section h2 {
		text-align: center;
		color: var(--theme-primary);
		font-size: 2.5rem;
		margin-bottom: 3rem;
	}

	.process-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.process-step {
		text-align: center;
		padding: 2rem;
		background: var(--theme-surface-1);
		border-radius: 0.75rem;
	}

	.step-number {
		width: 60px;
		height: 60px;
		background: var(--theme-primary);
		color: var(--theme-on-primary);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		font-weight: bold;
		margin: 0 auto 1rem auto;
	}

	.process-step h3 {
		color: var(--theme-primary);
		margin-bottom: 0.75rem;
		font-size: 1.25rem;
		font-weight: bold;
	}

	.process-step p {
		font-size: 0.9rem;
		line-height: 1.4;
		opacity: 0.85;
	}

	/* Applications */
	.applications-section {
		background: var(--theme-surface-1);
		padding: 4rem 2rem;
		border-radius: 1rem;
		margin: 4rem 0;
		text-align: center;
	}

	.applications-section h2 {
		text-align: center;
		color: var(--theme-primary);
		font-size: 2.5rem;
		margin-bottom: 3rem;
	}

	.applications-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.application-card {
		background: var(--theme-bg);
		padding: 2rem;
		border-radius: 0.75rem;
		text-align: center;
	}

	.application-card h3 {
		color: var(--theme-primary);
		margin-bottom: 1rem;
		font-size: 1.25rem;
		font-weight: bold;
	}

	.application-card p {
		font-size: 0.9rem;
		line-height: 1.4;
		opacity: 0.85;
	}

	/* Related Services & Counties */
	.related-services, .related-counties {
		margin: 4rem 0;
		text-align: center;
	}

	.related-services h2, .related-counties h2 {
		text-align: center;
		color: var(--theme-primary);
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.related-services p, .related-counties p {
		text-align: center;
		font-size: 1.1rem;
		margin-bottom: 3rem;
		opacity: 0.8;
	}

	.services-grid, .counties-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.service-card, .county-card {
		background: var(--theme-surface-1);
		padding: 2rem;
		border-radius: 0.75rem;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		text-align: center;
	}

	.service-card h3, .county-card h3 {
		margin-bottom: 1rem;
	}

	.service-card h3 a, .county-card h3 a {
		color: var(--theme-primary);
		text-decoration: none;
		font-size: 1.1rem;
	}

	.service-card h3 a:hover, .county-card h3 a:hover {
		text-decoration: underline;
	}

	.service-link {
		color: var(--theme-primary);
		text-decoration: none;
		font-weight: 600;
		margin-top: 1rem;
		display: inline-block;
	}

	.service-link:hover {
		text-decoration: underline;
	}

	/* Contact Section */
	.contact-section {
		background: var(--theme-surface-1);
		padding: 4rem 0;
	}
	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: start;
	}
	.contact-info h2 {
		font-size: 2.5rem;
		font-weight: var(--font-weight-bold);
		color: var(--theme-text-primary);
		margin-bottom: 1rem;
	}
	.contact-info > p {
		font-size: 1.125rem;
		line-height: var(--line-height-relaxed);
		margin-bottom: 2rem;
		color: var(--theme-text-secondary);
	}
	.contact-methods {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-bottom: 2rem;
	}
	.contact-button-wrapper {
		width: 100%;
	}
	.contact-button {
		display: flex;
		align-items: center;
		text-align: left;
		gap: 1rem;
		padding: 1.5rem;
		border-radius: var(--theme-card-radius);
		border: none;
		transition: var(--theme-transition);
		text-decoration: none;
		width: 100%;
		cursor: pointer;
		min-height: 80px;
	}
	.contact-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
	}
	.contact-button-phone {
		background: #FFC107;
		color: #002F4B;
	}
	.contact-button-phone:hover {
		background: #E6AC00;
		color: #002F4B;
	}
	.contact-button-email {
		background: #002F4B;
		color: white;
	}
	.contact-button-email:hover {
		background: #001f36;
		color: white;
	}
	.contact-icon {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.1);
		flex-shrink: 0;
